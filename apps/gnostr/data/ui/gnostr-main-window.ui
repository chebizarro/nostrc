<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <!-- GNostr main window template; subclass will bind via template resource -->
  <template class="GnostrMainWindow" parent="GtkApplicationWindow">
    <property name="title">GNostr</property>
    <property name="default-width">900</property>
    <property name="default-height">640</property>
    <property name="decorated">true</property>
    <!-- Titlebar removed to allow server-side decorations; headerbar rendered inside content below -->
    
    <child>
      <object class="GtkOverlay" id="root_overlay">
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">0</property>            

            <!-- In-content header bar (app controls only); WM draws actual window buttons/titlebar -->
            <child>
              <object class="GtkHeaderBar">
                <property name="show-title-buttons">false</property>
                <child type="title">
                  <object class="GtkStackSwitcher">
                    <property name="stack">stack</property>
                  </object>
                </child>
                <child type="start">
                  <object class="GtkButton" id="btn_relays">
                    <property name="label">Relays</property>
                    <property name="tooltip-text">Manage relay connections</property>
                    <signal name="clicked" handler="on_relays_clicked" swapped="no"/>
                  </object>
                </child>
                <child type="start">
                  <object class="GtkButton" id="btn_settings">
                    <property name="icon-name">emblem-system-symbolic</property>
                    <property name="tooltip-text">Open settings</property>
                    <signal name="clicked" handler="on_settings_clicked" swapped="no"/>
                  </object>
                </child>
                <child type="start">
                  <object class="GtkMenuButton" id="btn_avatar">
                    <property name="icon-name">avatar-default-symbolic</property>
                    <property name="has-frame">true</property>
                    <property name="sensitive">true</property>
                    <property name="focusable">true</property>
                    <property name="can-target">true</property>
                    <property name="always-show-arrow">true</property>
                    <property name="tooltip-text">Login / Account</property>
                    <child type="popover">
                      <object class="GtkPopover" id="avatar_popover">
                        <property name="has-arrow">true</property>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">8</property>
                            <property name="margin-bottom">8</property>
                            <property name="spacing">8</property>
                            <child>
                              <object class="GtkLabel" id="lbl_signin_status">
                                <property name="label">Not signed in</property>
                                <property name="css-classes">title-4</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="lbl_profile_name">
                                <property name="label"></property>
                                <property name="wrap">true</property>
                                <property name="wrap-mode">word-char</property>
                                <property name="max-width-chars">28</property>
                                <property name="ellipsize">end</property>
                                <property name="css-classes">dim-label</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton" id="btn_login">
                                <property name="label">Log In</property>
                                <property name="tooltip-text">Sign in to your account</property>
                                <signal name="clicked" handler="on_avatar_login_clicked" swapped="no"/>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton" id="btn_logout">
                                <property name="label">Log Out</property>
                                <property name="tooltip-text">Sign out of your account</property>
                                <signal name="clicked" handler="on_avatar_logout_clicked" swapped="no"/>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                <child type="start">
                  <object class="GtkMenuButton" id="btn_menu">
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="tooltip-text">Main menu</property>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="GtkStack" id="stack">
                <property name="transition-type">crossfade</property>
                <property name="vexpand">true</property>

                <child>
                  <object class="GtkStackPage">
                    <property name="title">Timeline</property>
                    <property name="child">
                      <!-- Timeline with overlay profile pane -->
                      <object class="GtkOverlay" id="timeline_overlay">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        
                        <!-- Base: Timeline (full width) -->
                        <child>
                          <object class="GnostrTimelineView" id="timeline">
                            <property name="hexpand">true</property>
                            <property name="vexpand">true</property>
                          </object>
                        </child>

                        <!-- nostrc-yi2: Overlay - "N new notes" indicator at top -->
                        <child type="overlay">
                          <object class="GtkRevealer" id="new_notes_revealer">
                            <property name="transition-type">slide-down</property>
                            <property name="reveal-child">false</property>
                            <property name="transition-duration">200</property>
                            <property name="halign">center</property>
                            <property name="valign">start</property>
                            <property name="margin-top">8</property>
                            <child>
                              <object class="GtkButton" id="btn_new_notes">
                                <property name="css-classes">new-notes-indicator</property>
                                <property name="focusable">true</property>
                                <property name="tooltip-text">Scroll to new notes</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">horizontal</property>
                                    <property name="spacing">6</property>
                                    <child>
                                      <object class="GtkImage">
                                        <property name="icon-name">go-up-symbolic</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="lbl_new_notes_count">
                                        <property name="label">New notes</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <!-- Overlay: Profile Pane (slides in from right) -->
                        <child type="overlay">
                          <object class="GtkRevealer" id="profile_revealer">
                            <property name="transition-type">slide-left</property>
                            <property name="reveal-child">false</property>
                            <property name="transition-duration">250</property>
                            <property name="halign">end</property>
                            <property name="valign">fill</property>
                            <child>
                              <object class="GnostrProfilePane" id="profile_pane">
                                <property name="vexpand">true</property>
                              </object>
                            </child>
                          </object>
                        </child>

                        <!-- Overlay: Thread View (slides in from right, over profile pane) -->
                        <child type="overlay">
                          <object class="GtkRevealer" id="thread_revealer">
                            <property name="transition-type">slide-left</property>
                            <property name="reveal-child">false</property>
                            <property name="transition-duration">250</property>
                            <property name="halign">end</property>
                            <property name="valign">fill</property>
                            <child>
                              <object class="GnostrThreadView" id="thread_view">
                                <property name="vexpand">true</property>
                                <property name="width-request">450</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="GtkStackPage">
                    <property name="title">Notifications</property>
                    <property name="child">
                      <object class="GnostrNotificationsView" id="notifications_view">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="GtkStackPage">
                    <property name="title">Messages</property>
                    <property name="child">
                      <object class="GnostrDmInboxView" id="dm_inbox">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="GtkStackPage">
                    <property name="title">Discover</property>
                    <property name="child">
                      <object class="GnostrPageDiscover" id="page_discover">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                      </object>
                    </property>
                  </object>
                </child>

                <child>
                  <object class="GtkStackPage">
                    <property name="name">search</property>
                    <property name="title">Search</property>
                    <property name="icon-name">system-search-symbolic</property>
                    <property name="child">
                      <object class="GnostrSearchResultsView" id="search_view">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

            <!-- Composer at bottom of window (hidden when logged out) -->
            <child>
              <object class="GnostrComposer" id="composer">
                <property name="hexpand">true</property>
                <property name="visible">false</property>
              </object>
            </child>
          </object>
        </child>
        <child type="overlay">
          <object class="GtkRevealer" id="toast_revealer">
            <property name="transition-type">crossfade</property>
            <property name="halign">center</property>
            <property name="valign">end</property>
            <property name="margin-bottom">24</property>
            <child>
              <object class="GtkFrame">
                <property name="css-classes">card</property>
                <child>
                  <object class="GtkLabel" id="toast_label">
                    <property name="label">Toast</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <property name="margin-top">8</property>
                    <property name="margin-bottom">8</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
