<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkWindow" id="relay_discovery_window">
    <property name="title">Discover Relays (NIP-66)</property>
    <property name="default-width">700</property>
    <property name="default-height">550</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <property name="margin-start">16</property>
        <property name="margin-end">16</property>
        <property name="margin-top">16</property>
        <property name="margin-bottom">16</property>

        <!-- Header with description -->
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">4</property>
            <child>
              <object class="GtkLabel">
                <property name="xalign">0.0</property>
                <property name="use-markup">true</property>
                <property name="label">&lt;b&gt;Relay Discovery&lt;/b&gt;</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="xalign">0.0</property>
                <property name="wrap">true</property>
                <property name="use-markup">true</property>
                <property name="label">&lt;small&gt;Browse relays discovered via NIP-66 relay monitors. Filter by region, supported NIPs, and status to find relays that match your needs.&lt;/small&gt;</property>
                <property name="css-classes">dim-label</property>
              </object>
            </child>
          </object>
        </child>

        <!-- Filter controls -->
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">12</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Region:</property>
                  </object>
                </child>
                <child>
                  <object class="GtkDropDown" id="filter_region">
                    <property name="tooltip-text">Filter by geographic region</property>
                    <items>
                      <item>All Regions</item>
                      <item>North America</item>
                      <item>Europe</item>
                      <item>Asia Pacific</item>
                      <item>South America</item>
                      <item>Middle East</item>
                      <item>Africa</item>
                      <item>Other</item>
                    </items>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">NIP:</property>
                  </object>
                </child>
                <child>
                  <object class="GtkDropDown" id="filter_nip">
                    <property name="tooltip-text">Filter by required NIP support</property>
                    <items>
                      <item>Any NIPs</item>
                      <item>NIP-01 (Basic)</item>
                      <item>NIP-11 (Relay Info)</item>
                      <item>NIP-17 (Private DMs)</item>
                      <item>NIP-42 (Auth)</item>
                      <item>NIP-50 (Search)</item>
                      <item>NIP-57 (Zaps)</item>
                      <item>NIP-59 (Gift Wrap)</item>
                      <item>NIP-65 (Relay List)</item>
                    </items>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkCheckButton" id="filter_online">
                <property name="label">Online only</property>
                <property name="tooltip-text">Show only currently online relays</property>
                <property name="active">true</property>
              </object>
            </child>
            <child>
              <object class="GtkCheckButton" id="filter_free">
                <property name="label">Free only</property>
                <property name="tooltip-text">Show only relays that don't require payment</property>
                <property name="active">false</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="btn_refresh">
                <property name="icon-name">view-refresh-symbolic</property>
                <property name="tooltip-text">Refresh relay list from monitors</property>
                <property name="hexpand">true</property>
                <property name="halign">end</property>
              </object>
            </child>
          </object>
        </child>

        <!-- Main content stack -->
        <child>
          <object class="GtkStack" id="discovery_stack">
            <property name="vexpand">true</property>
            <property name="hexpand">true</property>
            <property name="transition-type">crossfade</property>

            <!-- Loading state -->
            <child>
              <object class="GtkStackPage">
                <property name="name">loading</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="valign">center</property>
                    <property name="halign">center</property>
                    <property name="spacing">16</property>
                    <child>
                      <object class="GtkSpinner" id="discovery_spinner">
                        <property name="spinning">true</property>
                        <property name="width-request">48</property>
                        <property name="height-request">48</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="loading_label">
                        <property name="label">Discovering relays from NIP-66 monitors...</property>
                        <property name="css-classes">dim-label</property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>

            <!-- Empty state -->
            <child>
              <object class="GtkStackPage">
                <property name="name">empty</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="valign">center</property>
                    <property name="halign">center</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">network-offline-symbolic</property>
                        <property name="pixel-size">64</property>
                        <property name="css-classes">dim-label</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">No relays found</property>
                        <property name="css-classes">title-3</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Try adjusting your filters or refresh the list.</property>
                        <property name="css-classes">dim-label</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="btn_refresh_empty">
                        <property name="label">Refresh</property>
                        <property name="halign">center</property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>

            <!-- Error state -->
            <child>
              <object class="GtkStackPage">
                <property name="name">error</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="valign">center</property>
                    <property name="halign">center</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">dialog-error-symbolic</property>
                        <property name="pixel-size">64</property>
                        <property name="css-classes">error</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="error_label">
                        <property name="label">Failed to discover relays</property>
                        <property name="wrap">true</property>
                        <property name="css-classes">error</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="btn_retry">
                        <property name="label">Try Again</property>
                        <property name="halign">center</property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>

            <!-- Results list -->
            <child>
              <object class="GtkStackPage">
                <property name="name">results</property>
                <property name="child">
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">8</property>
                    <child>
                      <object class="GtkLabel" id="results_label">
                        <property name="xalign">0.0</property>
                        <property name="use-markup">true</property>
                        <property name="label">&lt;small&gt;Found 0 relays&lt;/small&gt;</property>
                        <property name="css-classes">dim-label</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkScrolledWindow">
                        <property name="vexpand">true</property>
                        <property name="hexpand">true</property>
                        <child>
                          <object class="GtkListView" id="relay_list">
                            <property name="show-separators">true</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>

          </object>
        </child>

        <!-- Action buttons -->
        <child>
          <object class="GtkBox">
            <property name="halign">end</property>
            <property name="spacing">8</property>
            <child>
              <object class="GtkButton" id="btn_close">
                <property name="label">_Close</property>
                <property name="use-underline">true</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="btn_add_selected">
                <property name="label">_Add Selected</property>
                <property name="use-underline">true</property>
                <property name="css-classes">suggested-action</property>
                <property name="sensitive">false</property>
                <property name="tooltip-text">Add selected relays to your relay list</property>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>
  </object>
</interface>
