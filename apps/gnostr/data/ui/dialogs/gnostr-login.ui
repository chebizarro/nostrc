<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="GnostrLogin" parent="GtkWindow">
    <property name="modal">true</property>
    <property name="title">Sign In</property>
    <property name="default-width">440</property>
    <property name="default-height">520</property>
    <property name="resizable">true</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">0</property>

        <!-- Header bar -->
        <child>
          <object class="GtkHeaderBar">
            <property name="show-title-buttons">false</property>
            <child type="start">
              <object class="GtkButton" id="btn_close">
                <property name="label">Close</property>
                <signal name="clicked" handler="on_close_clicked"/>
              </object>
            </child>
            <child type="title">
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">8</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">dialog-password-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Sign In</property>
                    <style>
                      <class name="title"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- Toast revealer -->
        <child>
          <object class="GtkRevealer" id="toast_revealer">
            <property name="reveal-child">false</property>
            <property name="transition-type">slide-down</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">8</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="margin-top">8</property>
                <property name="margin-bottom">8</property>
                <style>
                  <class name="app-notification"/>
                </style>
                <child>
                  <object class="GtkLabel" id="toast_label">
                    <property name="label"></property>
                    <property name="hexpand">true</property>
                    <property name="xalign">0</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- Stack for login methods -->
        <child>
          <object class="GtkStack" id="stack">
            <property name="vexpand">true</property>
            <property name="transition-type">crossfade</property>

            <!-- Choose method page -->
            <child>
              <object class="GtkStackPage">
                <property name="name">choose</property>
                <property name="child">
                  <object class="GtkBox" id="page_choose">
                    <property name="orientation">vertical</property>
                    <property name="spacing">16</property>
                    <property name="margin-start">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-top">24</property>
                    <property name="margin-bottom">24</property>
                    <property name="valign">center</property>

                    <!-- Icon and description -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">12</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">system-users-symbolic</property>
                            <property name="pixel-size">64</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Choose Sign-In Method</property>
                            <style>
                              <class name="title-2"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Sign in using a local signer app (NIP-55L) or pair with a remote signer (NIP-46) for secure key management.</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">45</property>
                            <property name="justify">center</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Local Signer (NIP-55L) -->
                    <child>
                      <object class="GtkFrame">
                        <style>
                          <class name="view"/>
                        </style>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">8</property>
                            <property name="margin-start">16</property>
                            <property name="margin-end">16</property>
                            <property name="margin-top">12</property>
                            <property name="margin-bottom">12</property>
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">12</property>
                                <child>
                                  <object class="GtkImage">
                                    <property name="icon-name">computer-symbolic</property>
                                    <property name="pixel-size">32</property>
                                    <style>
                                      <class name="accent"/>
                                    </style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">2</property>
                                    <property name="hexpand">true</property>
                                    <property name="valign">center</property>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label">Local Signer (NIP-55L)</property>
                                        <property name="xalign">0</property>
                                        <style>
                                          <class name="heading"/>
                                        </style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel" id="lbl_local_status">
                                        <property name="label">Checking availability...</property>
                                        <property name="xalign">0</property>
                                        <style>
                                          <class name="dim-label"/>
                                          <class name="caption"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">8</property>
                                <property name="halign">end</property>
                                <child>
                                  <object class="GtkSpinner" id="spinner_local">
                                    <property name="visible">false</property>
                                    <property name="spinning">true</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkButton" id="btn_local_signer">
                                    <property name="label">Sign with Local Signer</property>
                                    <property name="sensitive">false</property>
                                    <signal name="clicked" handler="on_local_signer_clicked"/>
                                    <style>
                                      <class name="suggested-action"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Remote Signer (NIP-46) -->
                    <child>
                      <object class="GtkFrame">
                        <style>
                          <class name="view"/>
                        </style>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">8</property>
                            <property name="margin-start">16</property>
                            <property name="margin-end">16</property>
                            <property name="margin-top">12</property>
                            <property name="margin-bottom">12</property>
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">12</property>
                                <child>
                                  <object class="GtkImage">
                                    <property name="icon-name">phone-symbolic</property>
                                    <property name="pixel-size">32</property>
                                    <style>
                                      <class name="accent"/>
                                    </style>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">2</property>
                                    <property name="hexpand">true</property>
                                    <property name="valign">center</property>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label">Remote Signer (NIP-46)</property>
                                        <property name="xalign">0</property>
                                        <style>
                                          <class name="heading"/>
                                        </style>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkLabel">
                                        <property name="label">Connect using bunker:// URI or QR code</property>
                                        <property name="xalign">0</property>
                                        <style>
                                          <class name="dim-label"/>
                                          <class name="caption"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton" id="btn_remote_signer">
                                <property name="label">Connect Remote Signer</property>
                                <property name="halign">end</property>
                                <signal name="clicked" handler="on_remote_signer_clicked"/>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>

                  </object>
                </property>
              </object>
            </child>

            <!-- NIP-46 Bunker connection page -->
            <child>
              <object class="GtkStackPage">
                <property name="name">bunker</property>
                <property name="child">
                  <object class="GtkBox" id="page_bunker">
                    <property name="orientation">vertical</property>
                    <property name="spacing">16</property>
                    <property name="margin-start">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-top">24</property>
                    <property name="margin-bottom">24</property>

                    <!-- Back button -->
                    <child>
                      <object class="GtkButton" id="btn_back_bunker">
                        <property name="halign">start</property>
                        <signal name="clicked" handler="on_back_clicked"/>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">horizontal</property>
                            <property name="spacing">4</property>
                            <child>
                              <object class="GtkImage">
                                <property name="icon-name">go-previous-symbolic</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="label">Back</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- QR Code section -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">12</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Scan with Mobile Signer</property>
                            <style>
                              <class name="title-3"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkFrame" id="qr_frame">
                            <style>
                              <class name="view"/>
                            </style>
                            <child>
                              <object class="GtkBox">
                                <property name="margin-start">8</property>
                                <property name="margin-end">8</property>
                                <property name="margin-top">8</property>
                                <property name="margin-bottom">8</property>
                                <child>
                                  <object class="GtkPicture" id="qr_picture">
                                    <property name="content-fit">contain</property>
                                    <property name="width-request">200</property>
                                    <property name="height-request">200</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">or enter bunker:// URI manually</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Manual bunker URI entry -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Bunker URI</property>
                            <property name="xalign">0</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">horizontal</property>
                            <property name="spacing">8</property>
                            <child>
                              <object class="GtkEntry" id="entry_bunker_uri">
                                <property name="placeholder-text">bunker://...</property>
                                <property name="hexpand">true</property>
                                <property name="input-purpose">url</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton" id="btn_paste_bunker">
                                <property name="icon-name">edit-paste-symbolic</property>
                                <property name="tooltip-text">Paste from clipboard</property>
                                <signal name="clicked" handler="on_paste_bunker_clicked"/>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Get this URI from your signer app (e.g., Amber, nsec.app)</property>
                            <property name="xalign">0</property>
                            <property name="wrap">true</property>
                            <style>
                              <class name="caption"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Connect button -->
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkButton" id="btn_connect_bunker">
                            <property name="label">Connect</property>
                            <signal name="clicked" handler="on_connect_bunker_clicked"/>
                            <style>
                              <class name="suggested-action"/>
                              <class name="pill"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkSpinner" id="spinner_bunker">
                            <property name="visible">false</property>
                            <property name="spinning">true</property>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Connection status -->
                    <child>
                      <object class="GtkLabel" id="lbl_bunker_status">
                        <property name="label"></property>
                        <property name="wrap">true</property>
                        <property name="halign">center</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>

                  </object>
                </property>
              </object>
            </child>

            <!-- Success page -->
            <child>
              <object class="GtkStackPage">
                <property name="name">success</property>
                <property name="child">
                  <object class="GtkBox" id="page_success">
                    <property name="orientation">vertical</property>
                    <property name="spacing">16</property>
                    <property name="margin-start">24</property>
                    <property name="margin-end">24</property>
                    <property name="margin-top">24</property>
                    <property name="margin-bottom">24</property>
                    <property name="valign">center</property>
                    <property name="halign">center</property>

                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">emblem-ok-symbolic</property>
                        <property name="pixel-size">64</property>
                        <style>
                          <class name="success"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Signed In</property>
                        <style>
                          <class name="title-2"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="lbl_success_npub">
                        <property name="label">npub...</property>
                        <property name="selectable">true</property>
                        <property name="wrap">true</property>
                        <property name="max-width-chars">40</property>
                        <style>
                          <class name="monospace"/>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="btn_done">
                        <property name="label">Done</property>
                        <signal name="clicked" handler="on_done_clicked"/>
                        <style>
                          <class name="suggested-action"/>
                          <class name="pill"/>
                        </style>
                      </object>
                    </child>

                  </object>
                </property>
              </object>
            </child>

          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
