<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="GnostrLiveCard" parent="GtkWidget">
    <child>
      <object class="GtkBox" id="root_box">
        <property name="orientation">vertical</property>
        <property name="hexpand">true</property>

        <!-- Main card frame -->
        <child>
          <object class="GtkFrame" id="card_frame">
            <property name="hexpand">true</property>
            <style>
              <class name="live-card-frame"/>
            </style>

            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">0</property>

                <!-- Cover image with status badge overlay -->
                <child>
                  <object class="GtkOverlay" id="image_overlay">
                    <property name="hexpand">true</property>
                    <style>
                      <class name="live-cover-overlay"/>
                    </style>

                    <!-- Cover image -->
                    <child>
                      <object class="GtkPicture" id="cover_image">
                        <property name="content-fit">cover</property>
                        <property name="height-request">180</property>
                        <property name="hexpand">true</property>
                        <style>
                          <class name="live-cover-image"/>
                        </style>
                      </object>
                    </child>

                    <!-- Status badge (top-left overlay) -->
                    <child type="overlay">
                      <object class="GtkBox" id="status_badge">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">4</property>
                        <property name="halign">start</property>
                        <property name="valign">start</property>
                        <property name="margin-start">8</property>
                        <property name="margin-top">8</property>
                        <style>
                          <class name="live-status-badge"/>
                        </style>

                        <child>
                          <object class="GtkImage" id="status_icon">
                            <property name="icon-name">media-record-symbolic</property>
                            <property name="pixel-size">12</property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel" id="status_label">
                            <property name="label">LIVE</property>
                            <style>
                              <class name="live-status-text"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- Loading spinner (centered) -->
                <child>
                  <object class="GtkSpinner" id="loading_spinner">
                    <property name="visible">false</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="margin-top">24</property>
                    <property name="margin-bottom">24</property>
                  </object>
                </child>

                <!-- Error label -->
                <child>
                  <object class="GtkLabel" id="error_label">
                    <property name="visible">false</property>
                    <property name="label">Failed to load</property>
                    <property name="wrap">true</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <property name="margin-top">16</property>
                    <property name="margin-bottom">16</property>
                    <style>
                      <class name="dim-label"/>
                      <class name="error"/>
                    </style>
                  </object>
                </child>

                <!-- Content area -->
                <child>
                  <object class="GtkBox" id="content_box">
                    <property name="orientation">vertical</property>
                    <property name="spacing">8</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">12</property>

                    <!-- Title -->
                    <child>
                      <object class="GtkLabel" id="title_label">
                        <property name="label">Live Activity Title</property>
                        <property name="xalign">0.0</property>
                        <property name="wrap">true</property>
                        <property name="wrap-mode">word-char</property>
                        <property name="lines">2</property>
                        <property name="ellipsize">end</property>
                        <property name="max-width-chars">50</property>
                        <style>
                          <class name="live-title"/>
                        </style>
                      </object>
                    </child>

                    <!-- Summary -->
                    <child>
                      <object class="GtkLabel" id="summary_label">
                        <property name="label">Event description goes here...</property>
                        <property name="xalign">0.0</property>
                        <property name="wrap">true</property>
                        <property name="wrap-mode">word-char</property>
                        <property name="lines">2</property>
                        <property name="ellipsize">end</property>
                        <property name="max-width-chars">60</property>
                        <style>
                          <class name="live-summary"/>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>

                    <!-- Hashtags -->
                    <child>
                      <object class="GtkBox" id="hashtags_box">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">6</property>
                        <property name="visible">false</property>
                        <style>
                          <class name="live-hashtags"/>
                        </style>
                      </object>
                    </child>

                    <!-- Meta row: speakers, viewers, time -->
                    <child>
                      <object class="GtkBox" id="meta_box">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">12</property>
                        <property name="margin-top">4</property>

                        <!-- Speakers avatars -->
                        <child>
                          <object class="GtkBox" id="speakers_box">
                            <property name="orientation">horizontal</property>
                            <property name="spacing">-8</property>
                            <style>
                              <class name="live-speakers"/>
                            </style>
                          </object>
                        </child>

                        <!-- Viewers count -->
                        <child>
                          <object class="GtkLabel" id="viewers_label">
                            <property name="visible">false</property>
                            <property name="xalign">0.0</property>
                            <style>
                              <class name="live-viewers"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>

                        <!-- Spacer -->
                        <child>
                          <object class="GtkBox">
                            <property name="hexpand">true</property>
                          </object>
                        </child>

                        <!-- Time info -->
                        <child>
                          <object class="GtkLabel" id="time_label">
                            <property name="visible">false</property>
                            <property name="xalign">1.0</property>
                            <property name="halign">end</property>
                            <style>
                              <class name="live-time"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Action button -->
                    <child>
                      <object class="GtkButton" id="action_button">
                        <property name="label">Watch Live</property>
                        <property name="halign">fill</property>
                        <property name="margin-top">8</property>
                        <style>
                          <class name="live-action-button"/>
                        </style>
                      </object>
                    </child>

                  </object>
                </child>

              </object>
            </property>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
