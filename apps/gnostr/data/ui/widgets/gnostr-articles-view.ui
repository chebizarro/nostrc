<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0" />
    <template class="GnostrArticlesView" parent="GtkWidget">
        <child>
            <object class="GtkBox" id="root">
                <property name="orientation">vertical</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="spacing">0</property>

                <!-- Header with title and filters -->
                <child>
                    <object class="GtkBox" id="header_box">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">8</property>

                        <!-- Title -->
                        <child>
                            <object class="GtkLabel" id="title_label">
                                <property name="label">Articles</property>
                                <property name="xalign">0.0</property>
                                <style>
                                    <class name="title-2" />
                                </style>
                            </object>
                        </child>

                        <!-- Search entry -->
                        <child>
                            <object class="GtkSearchEntry" id="search_entry">
                                <property name="placeholder-text">Search articles...</property>
                                <property name="hexpand">true</property>
                            </object>
                        </child>

                        <!-- Filter chips row -->
                        <child>
                            <object class="GtkBox" id="filter_row">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">8</property>
                                <property name="hexpand">true</property>

                                <child>
                                    <object class="GtkToggleButton" id="btn_all">
                                        <property name="label">All</property>
                                        <property name="active">true</property>
                                        <style>
                                            <class name="pill" />
                                        </style>
                                    </object>
                                </child>

                                <child>
                                    <object class="GtkToggleButton" id="btn_wiki">
                                        <property name="label">Wiki</property>
                                        <property name="tooltip-text">NIP-54 Wiki Articles</property>
                                        <style>
                                            <class name="pill" />
                                        </style>
                                    </object>
                                </child>

                                <child>
                                    <object class="GtkToggleButton" id="btn_blog">
                                        <property name="label">Blog</property>
                                        <property name="tooltip-text">NIP-23 Long-form Content</property>
                                        <style>
                                            <class name="pill" />
                                        </style>
                                    </object>
                                </child>

                                <!-- Spacer -->
                                <child>
                                    <object class="GtkBox">
                                        <property name="hexpand">true</property>
                                    </object>
                                </child>

                                <!-- Article count label -->
                                <child>
                                    <object class="GtkLabel" id="lbl_count">
                                        <property name="label">0 articles</property>
                                        <style>
                                            <class name="dim-label" />
                                        </style>
                                    </object>
                                </child>
                            </object>
                        </child>

                        <!-- Topic filter indicator (shown when filtering by topic) -->
                        <child>
                            <object class="GtkBox" id="topic_filter_box">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">8</property>
                                <property name="visible">false</property>

                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Filtered by topic:</property>
                                        <style>
                                            <class name="dim-label" />
                                        </style>
                                    </object>
                                </child>

                                <child>
                                    <object class="GtkLabel" id="topic_filter_label">
                                        <property name="label"></property>
                                        <style>
                                            <class name="accent" />
                                        </style>
                                    </object>
                                </child>

                                <child>
                                    <object class="GtkButton" id="btn_clear_topic">
                                        <property name="icon-name">window-close-symbolic</property>
                                        <property name="tooltip-text">Clear topic filter</property>
                                        <property name="has-frame">false</property>
                                        <style>
                                            <class name="circular" />
                                        </style>
                                    </object>
                                </child>
                            </object>
                        </child>

                    </object>
                </child>

                <!-- Separator -->
                <child>
                    <object class="GtkSeparator">
                        <property name="orientation">horizontal</property>
                    </object>
                </child>

                <!-- Content stack: results / empty / loading -->
                <child>
                    <object class="GtkStack" id="content_stack">
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <property name="transition-type">crossfade</property>

                        <!-- Results view -->
                        <child>
                            <object class="GtkStackPage">
                                <property name="name">results</property>
                                <property name="child">
                                    <object class="GtkScrolledWindow" id="articles_scroll">
                                        <property name="hexpand">true</property>
                                        <property name="vexpand">true</property>
                                        <property name="hscrollbar-policy">never</property>
                                        <child>
                                            <object class="GtkListView" id="articles_list">
                                                <property name="hexpand">true</property>
                                                <property name="vexpand">true</property>
                                                <style>
                                                    <class name="navigation-sidebar" />
                                                </style>
                                            </object>
                                        </child>
                                    </object>
                                </property>
                            </object>
                        </child>

                        <!-- Empty state -->
                        <child>
                            <object class="GtkStackPage">
                                <property name="name">empty</property>
                                <property name="child">
                                    <object class="GtkBox" id="empty_state">
                                        <property name="orientation">vertical</property>
                                        <property name="halign">center</property>
                                        <property name="valign">center</property>
                                        <property name="spacing">12</property>
                                        <child>
                                            <object class="GtkImage">
                                                <property name="icon-name">document-open-symbolic</property>
                                                <property name="pixel-size">64</property>
                                                <style>
                                                    <class name="dim-label" />
                                                </style>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkLabel">
                                                <property name="label">No Articles Found</property>
                                                <style>
                                                    <class name="title-2" />
                                                </style>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkLabel">
                                                <property name="label">Wiki and long-form articles
                                                    will appear here as you browse the network.</property>
                                                <property name="wrap">true</property>
                                                <property name="justify">center</property>
                                                <property name="max-width-chars">40</property>
                                                <style>
                                                    <class name="dim-label" />
                                                </style>
                                            </object>
                                        </child>
                                    </object>
                                </property>
                            </object>
                        </child>

                        <!-- Loading state -->
                        <child>
                            <object class="GtkStackPage">
                                <property name="name">loading</property>
                                <property name="child">
                                    <object class="GtkBox">
                                        <property name="orientation">vertical</property>
                                        <property name="halign">center</property>
                                        <property name="valign">center</property>
                                        <property name="spacing">12</property>
                                        <child>
                                            <object class="GtkSpinner" id="loading_spinner">
                                                <property name="spinning">false</property>
                                                <property name="width-request">32</property>
                                                <property name="height-request">32</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkLabel">
                                                <property name="label">Loading articles...</property>
                                                <style>
                                                    <class name="dim-label" />
                                                </style>
                                            </object>
                                        </child>
                                    </object>
                                </property>
                            </object>
                        </child>

                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>