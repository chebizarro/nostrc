<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="GnostrComposer" parent="GtkWidget">
    <child>
      <object class="GtkBox" id="root">
        <property name="orientation">vertical</property>
        <property name="spacing">6</property>
        <property name="margin-top">6</property>
        <property name="margin-bottom">6</property>
        <property name="margin-start">6</property>
        <property name="margin-end">6</property>
        <!-- Reply indicator (hidden by default) -->
        <child>
          <object class="GtkBox" id="reply_indicator_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">6</property>
            <property name="visible">false</property>
            <style>
              <class name="composer-reply-indicator"/>
            </style>
            <child>
              <object class="GtkImage">
                <property name="icon-name">mail-reply-sender-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="reply_indicator">
                <property name="label">Replying to @user</property>
                <property name="xalign">0</property>
                <property name="hexpand">true</property>
                <style>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="btn_cancel_reply">
                <property name="icon-name">window-close-symbolic</property>
                <property name="tooltip-text">Cancel reply</property>
                <property name="has-frame">false</property>
                <signal name="clicked" handler="on_cancel_reply_clicked" swapped="yes"/>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <!-- NIP-14 Subject input (optional, for email-like subject lines) -->
        <child>
          <object class="GtkBox" id="subject_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkLabel">
                <property name="label">Subject:</property>
                <style>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="subject_entry">
                <property name="hexpand">true</property>
                <property name="placeholder-text">Optional subject line (NIP-14)</property>
                <property name="max-length">80</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkTextView" id="text_view"/>
        </child>
        <!-- Upload progress indicator (hidden by default) -->
        <child>
          <object class="GtkBox" id="upload_progress_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">6</property>
            <property name="visible">false</property>
            <style>
              <class name="composer-upload-progress"/>
            </style>
            <child>
              <object class="GtkSpinner" id="upload_spinner">
                <property name="spinning">false</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="upload_status_label">
                <property name="label">Uploading...</property>
                <property name="xalign">0</property>
                <property name="hexpand">true</property>
                <style>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkButton" id="btn_attach">
                <property name="icon-name">mail-attachment-symbolic</property>
                <property name="tooltip-text">Attach image or file</property>
                <property name="has-frame">false</property>
                <signal name="clicked" handler="on_attach_clicked" swapped="yes"/>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
            <!-- NIP-36: Sensitive content toggle button -->
            <child>
              <object class="GtkToggleButton" id="btn_sensitive">
                <property name="icon-name">dialog-warning-symbolic</property>
                <property name="tooltip-text">Mark as sensitive content (NIP-36)</property>
                <property name="has-frame">false</property>
                <signal name="toggled" handler="on_sensitive_toggled" swapped="yes"/>
                <style>
                  <class name="flat"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="hexpand">true</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="btn_post">
                <property name="label">Post</property>
                <property name="tooltip-text">Publish note</property>
                <signal name="clicked" handler="on_post_clicked" swapped="yes"/>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
