<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.4"/>
  <template class="SheetCreateProfile" parent="AdwDialog">
    <property name="title" translatable="yes">Create Profile</property>
    <property name="content-width">480</property>
    <property name="content-height">600</property>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="GtkLabel">
                <property name="label" translatable="yes">Create Profile</property>
              </object>
            </property>
            <child type="start">
              <object class="GtkButton" id="btn_cancel">
                <property name="label" translatable="yes">Cancel</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="btn_create">
                <property name="label" translatable="yes">Create</property>
                <property name="tooltip-text" translatable="yes">Create a new profile with this passphrase</property>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">never</property>
            <property name="vexpand">true</property>
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">500</property>
                <property name="margin-top">16</property>
                <property name="margin-bottom">16</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">16</property>

                    <!-- Introduction text -->
                    <child>
                      <object class="GtkLabel">
                        <property name="wrap">true</property>
                        <property name="xalign">0</property>
                        <property name="label" translatable="yes">Create a new Nostr profile. Your private key will be encrypted with your passphrase and stored securely.</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>

                    <!-- Identity Group -->
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Identity</property>
                        <child>
                          <object class="AdwEntryRow" id="entry_display_name">
                            <property name="title" translatable="yes">Display Name</property>
                            <property name="input-hints">GTK_INPUT_HINT_SPELLCHECK</property>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Security Group -->
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Security</property>
                        <property name="description" translatable="yes">Your passphrase protects your private key. Choose a strong passphrase that you can remember.</property>

                        <child>
                          <object class="AdwPasswordEntryRow" id="entry_passphrase">
                            <property name="title" translatable="yes">Passphrase</property>
                          </object>
                        </child>

                        <!-- Passphrase strength indicator -->
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">horizontal</property>
                            <property name="spacing">12</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">4</property>
                            <property name="margin-bottom">8</property>
                            <child>
                              <object class="GtkLevelBar" id="level_passphrase_strength">
                                <property name="min-value">0</property>
                                <property name="max-value">4</property>
                                <property name="value">0</property>
                                <property name="hexpand">true</property>
                                <property name="valign">center</property>
                                <offsets>
                                  <offset name="low" value="1"/>
                                  <offset name="high" value="2"/>
                                  <offset name="full" value="4"/>
                                </offsets>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="lbl_passphrase_strength">
                                <property name="label" translatable="yes">Weak</property>
                                <property name="width-chars">12</property>
                                <property name="xalign">1</property>
                                <style>
                                  <class name="caption"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="AdwPasswordEntryRow" id="entry_confirm_passphrase">
                            <property name="title" translatable="yes">Confirm Passphrase</property>
                          </object>
                        </child>

                        <!-- Passphrase match indicator -->
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">horizontal</property>
                            <property name="spacing">8</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">4</property>
                            <property name="margin-bottom">8</property>
                            <property name="halign">end</property>
                            <child>
                              <object class="GtkLabel" id="lbl_passphrase_match">
                                <property name="label" translatable="yes">Passphrases match</property>
                                <style>
                                  <class name="caption"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Recovery Group -->
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Recovery</property>
                        <property name="description" translatable="yes">A hint to help you remember your passphrase. This is stored unencrypted.</property>
                        <child>
                          <object class="AdwEntryRow" id="entry_recovery_hint">
                            <property name="title" translatable="yes">Recovery Hint (Optional)</property>
                            <property name="input-hints">GTK_INPUT_HINT_SPELLCHECK</property>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Advanced Options Group -->
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Advanced Options</property>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="yes">Use Hardware Key</property>
                            <property name="subtitle" translatable="yes">Store private key on a hardware security device (e.g., YubiKey)</property>
                            <child type="suffix">
                              <object class="GtkCheckButton" id="chk_hardware_key">
                                <property name="valign">center</property>
                              </object>
                            </child>
                            <property name="activatable-widget">chk_hardware_key</property>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Status/Progress indicator -->
                    <child>
                      <object class="GtkBox" id="box_status">
                        <property name="visible">false</property>
                        <property name="orientation">horizontal</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="margin-top">8</property>
                        <child>
                          <object class="GtkSpinner" id="spinner_status">
                            <property name="spinning">false</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="lbl_status">
                            <property name="label" translatable="yes">Creating profile...</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>

                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
