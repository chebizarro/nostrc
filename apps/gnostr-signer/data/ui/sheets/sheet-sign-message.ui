<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.5"/>
  <template class="SheetSignMessage" parent="AdwDialog">
    <property name="title" translatable="yes">Sign Message</property>
    <property name="content-width">520</property>
    <property name="content-height">-1</property>
    <property name="follows-content-size">true</property>
    <property name="can-close">true</property>
    <accessibility>
      <property name="label">Sign message dialog</property>
      <property name="description">Sign an arbitrary text message with your Nostr private key</property>
    </accessibility>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <accessibility>
              <property name="label">Sign message header</property>
            </accessibility>
            <property name="title-widget">
              <object class="GtkLabel">
                <property name="label" translatable="yes">Sign Message</property>
              </object>
            </property>
            <child type="start">
              <object class="GtkButton" id="btn_cancel">
                <property name="label" translatable="yes">Cancel</property>
                <accessibility>
                  <property name="label">Cancel</property>
                  <property name="description">Close without signing</property>
                </accessibility>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="btn_sign">
                <property name="label" translatable="yes">Sign</property>
                <property name="sensitive">false</property>
                <accessibility>
                  <property name="label">Sign message</property>
                  <property name="description">Sign the message with your private key</property>
                </accessibility>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">never</property>
            <property name="vexpand">true</property>
            <property name="propagate-natural-height">true</property>
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">560</property>
                <property name="tightening-threshold">400</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">0</property>
                    <property name="vexpand">true</property>

            <!-- Profile Info -->
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">8</property>
                <property name="margin-top">20</property>
                <property name="margin-bottom">16</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>
                <accessibility>
                  <property name="label">Signing profile information</property>
                </accessibility>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Signing Profile:</property>
                    <property name="xalign">0</property>
                    <property name="margin-bottom">4</property>
                    <style>
                      <class name="dim-label"/>
                      <class name="caption"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="lbl_profile">
                    <property name="label">Alice</property>
                    <property name="xalign">0</property>
                    <property name="selectable">true</property>
                    <accessibility>
                      <property name="label">Signing profile name</property>
                    </accessibility>
                    <attributes>
                      <attribute name="weight" value="bold"/>
                      <attribute name="scale" value="1.1"/>
                    </attributes>
                  </object>
                </child>
              </object>
            </child>

            <!-- Message Input -->
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">8</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>
                <property name="margin-bottom">16</property>
                <property name="vexpand">true</property>
                <accessibility>
                  <property name="label">Message input section</property>
                </accessibility>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Message to Sign:</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="dim-label"/>
                      <class name="caption"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vexpand">true</property>
                    <property name="min-content-height">200</property>
                    <accessibility>
                      <property name="label">Message text container</property>
                    </accessibility>
                    <style>
                      <class name="card"/>
                    </style>
                    <child>
                      <object class="GtkTextView" id="text_message">
                        <property name="wrap-mode">word-char</property>
                        <property name="left-margin">12</property>
                        <property name="right-margin">12</property>
                        <property name="top-margin">12</property>
                        <property name="bottom-margin">12</property>
                        <property name="accepts-tab">false</property>
                        <accessibility>
                          <property name="label">Message to sign</property>
                          <property name="description">Enter the text message you want to sign with your Nostr private key</property>
                        </accessibility>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Result Section (initially hidden) -->
            <child>
              <object class="GtkRevealer" id="revealer_result">
                <property name="reveal-child">false</property>
                <property name="transition-type">slide-down</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">8</property>
                    <property name="margin-start">16</property>
                    <property name="margin-end">16</property>
                    <property name="margin-bottom">16</property>
                    <accessibility>
                      <property name="label">Signature result section</property>
                    </accessibility>
                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">Signature:</property>
                        <property name="xalign">0</property>
                        <style>
                          <class name="dim-label"/>
                          <class name="caption"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="spacing">8</property>
                        <style>
                          <class name="card"/>
                        </style>
                        <child>
                          <object class="GtkLabel" id="lbl_signature">
                            <property name="label">Signature will appear here</property>
                            <property name="selectable">true</property>
                            <property name="wrap">true</property>
                            <property name="wrap-mode">char</property>
                            <property name="xalign">0</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">12</property>
                            <property name="margin-bottom">12</property>
                            <property name="hexpand">true</property>
                            <accessibility>
                              <property name="label">Generated signature</property>
                            </accessibility>
                            <style>
                              <class name="monospace"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="btn_copy_signature">
                            <property name="icon-name">edit-copy-symbolic</property>
                            <property name="tooltip-text" translatable="yes">Copy signature to clipboard</property>
                            <property name="valign">center</property>
                            <property name="margin-end">8</property>
                            <accessibility>
                              <property name="label">Copy signature</property>
                              <property name="description">Copy the signature to clipboard</property>
                            </accessibility>
                            <style>
                              <class name="flat"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
