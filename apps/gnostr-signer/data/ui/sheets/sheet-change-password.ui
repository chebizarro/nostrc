<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.4"/>
  <template class="SheetChangePassword" parent="AdwDialog">
    <property name="title" translatable="yes">Change Password</property>
    <property name="content-width">480</property>
    <property name="content-height">-1</property>
    <property name="can-close">true</property>
    <accessibility>
      <property name="label">Change password dialog</property>
      <property name="description">Change the passphrase used to encrypt your private key</property>
    </accessibility>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <accessibility>
              <property name="label">Change password header</property>
            </accessibility>
            <property name="title-widget">
              <object class="GtkLabel">
                <property name="label" translatable="yes">Change Password</property>
              </object>
            </property>
            <child type="start">
              <object class="GtkButton" id="btn_cancel">
                <property name="label" translatable="yes">_Cancel</property>
                <property name="use-underline">true</property>
                <accessibility>
                  <property name="label">Cancel</property>
                  <property name="description">Close without changing password. Keyboard shortcut: Alt+C or Escape.</property>
                </accessibility>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="btn_update">
                <property name="label" translatable="yes">_Update</property>
                <property name="use-underline">true</property>
                <property name="sensitive">false</property>
                <property name="tooltip-text" translatable="yes">Update your password (Alt+U)</property>
                <accessibility>
                  <property name="label">Update password</property>
                  <property name="description">Save the new password. Keyboard shortcut: Alt+U.</property>
                </accessibility>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">never</property>
            <property name="vexpand">true</property>
            <accessibility>
              <property name="label">Password form container</property>
            </accessibility>
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">500</property>
                <property name="margin-top">24</property>
                <property name="margin-bottom">24</property>
                <property name="margin-start">24</property>
                <property name="margin-end">24</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">24</property>

                    <!-- Introduction text -->
                    <child>
                      <object class="GtkLabel">
                        <property name="wrap">true</property>
                        <property name="xalign">0</property>
                        <property name="label" translatable="yes">Change the passphrase used to encrypt your private key. Make sure to use a strong passphrase that you can remember.</property>
                        <accessibility>
                          <property name="label">Instructions</property>
                          <property name="description">Instructions for changing your password.</property>
                        </accessibility>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>

                    <!-- Current Password -->
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">Current Password</property>
                        <accessibility>
                          <property name="label">Current password section</property>
                        </accessibility>

                        <!-- Current password label -->
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Current Password</property>
                            <property name="xalign">0</property>
                            <property name="margin-start">4</property>
                            <property name="margin-top">8</property>
                            <style>
                              <class name="caption"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>

                        <!-- Secure current password entry container -->
                        <child>
                          <object class="GtkBox" id="box_current_container">
                            <property name="orientation">vertical</property>
                            <property name="margin-start">4</property>
                            <property name="margin-end">4</property>
                            <property name="margin-bottom">8</property>
                            <accessibility>
                              <property name="label">Current password input container</property>
                              <property name="description">Enter your current password to verify your identity</property>
                            </accessibility>
                            <!-- GnSecureEntry will be added here programmatically -->
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- New Password -->
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title" translatable="yes">New Password</property>
                        <property name="description" translatable="yes">Choose a strong passphrase with at least 8 characters.</property>
                        <accessibility>
                          <property name="label">New password section</property>
                        </accessibility>

                        <!-- New password label -->
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">New Password</property>
                            <property name="xalign">0</property>
                            <property name="margin-start">4</property>
                            <property name="margin-top">8</property>
                            <style>
                              <class name="caption"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>

                        <!-- Secure new password entry container -->
                        <child>
                          <object class="GtkBox" id="box_new_container">
                            <property name="orientation">vertical</property>
                            <property name="margin-start">4</property>
                            <property name="margin-end">4</property>
                            <property name="margin-bottom">8</property>
                            <accessibility>
                              <property name="label">New password input container</property>
                              <property name="description">Enter a strong new password to encrypt your private key</property>
                            </accessibility>
                            <!-- GnSecureEntry will be added here programmatically -->
                          </object>
                        </child>

                        <!-- Confirm password label -->
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Confirm New Password</property>
                            <property name="xalign">0</property>
                            <property name="margin-start">4</property>
                            <property name="margin-top">8</property>
                            <style>
                              <class name="caption"/>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>

                        <!-- Secure confirm password entry container -->
                        <child>
                          <object class="GtkBox" id="box_confirm_container">
                            <property name="orientation">vertical</property>
                            <property name="margin-start">4</property>
                            <property name="margin-end">4</property>
                            <property name="margin-bottom">4</property>
                            <accessibility>
                              <property name="label">Confirm password input container</property>
                              <property name="description">Re-enter your new password to confirm</property>
                            </accessibility>
                            <!-- GnSecureEntry will be added here programmatically -->
                          </object>
                        </child>

                        <!-- Password match indicator -->
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">horizontal</property>
                            <property name="spacing">8</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">4</property>
                            <property name="margin-bottom">8</property>
                            <property name="halign">end</property>
                            <child>
                              <object class="GtkLabel" id="lbl_password_match">
                                <property name="label" translatable="yes">Passwords match</property>
                                <property name="visible">false</property>
                                <accessibility>
                                  <property name="label">Password match status</property>
                                  <property name="description">Indicates whether both passwords match</property>
                                </accessibility>
                                <style>
                                  <class name="caption"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Status/Error Banner -->
                    <child>
                      <object class="AdwBanner" id="banner_status">
                        <property name="revealed">false</property>
                        <property name="title">Status message</property>
                      </object>
                    </child>

                    <!-- Status/Progress indicator -->
                    <child>
                      <object class="GtkBox" id="box_status">
                        <property name="visible">false</property>
                        <property name="orientation">horizontal</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="margin-top">8</property>
                        <accessibility>
                          <property name="label">Update status</property>
                          <property name="description">Status indicator for password update</property>
                        </accessibility>
                        <child>
                          <object class="GtkSpinner" id="spinner_status">
                            <property name="spinning">false</property>
                            <accessibility>
                              <property name="label">Loading indicator</property>
                            </accessibility>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="lbl_status">
                            <property name="label" translatable="yes">Updating password...</property>
                            <accessibility>
                              <property name="label">Status message</property>
                            </accessibility>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>

                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
