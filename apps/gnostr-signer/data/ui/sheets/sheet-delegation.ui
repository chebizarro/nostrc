<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.5"/>
  <template class="SheetDelegation" parent="AdwDialog">
    <property name="title" translatable="yes">Delegation Management</property>
    <property name="can-close">true</property>
    <property name="content-width">520</property>
    <property name="content-height">680</property>
    <accessibility>
      <property name="label">Delegation management dialog</property>
      <property name="description">Create and manage NIP-26 delegations allowing other keys to sign on your behalf</property>
    </accessibility>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="start">
              <object class="GtkButton" id="btn_back">
                <property name="icon-name">go-previous-symbolic</property>
                <property name="visible">false</property>
                <accessibility>
                  <property name="label">Go back</property>
                </accessibility>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="btn_close">
                <property name="label" translatable="yes">Close</property>
                <accessibility>
                  <property name="label">Close dialog</property>
                </accessibility>
              </object>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="GtkStack" id="stack_main">
            <property name="transition-type">slide-left-right</property>
            <!-- List Page: Shows active delegations -->
            <child>
              <object class="GtkStackPage">
                <property name="name">list</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vscrollbar-policy">automatic</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum-size">480</property>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">18</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">18</property>
                            <property name="margin-bottom">18</property>
                            <!-- Header -->
                            <child>
                              <object class="AdwStatusPage" id="status_header">
                                <property name="icon-name">emblem-shared-symbolic</property>
                                <property name="title" translatable="yes">Delegations</property>
                                <property name="description" translatable="yes">Allow other keys to sign events on your behalf (NIP-26)</property>
                              </object>
                            </child>
                            <!-- Create Button -->
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="halign">center</property>
                                <child>
                                  <object class="GtkButton" id="btn_create_new">
                                    <property name="label" translatable="yes">Create New Delegation</property>
                                    <style>
                                      <class name="suggested-action"/>
                                      <class name="pill"/>
                                    </style>
                                    <accessibility>
                                      <property name="label">Create a new delegation token</property>
                                    </accessibility>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Active Delegations List -->
                            <child>
                              <object class="AdwPreferencesGroup" id="group_active">
                                <property name="title" translatable="yes">Active Delegations</property>
                                <property name="description" translatable="yes">Keys currently authorized to sign on your behalf</property>
                                <child>
                                  <object class="GtkListBox" id="list_delegations">
                                    <property name="selection-mode">none</property>
                                    <style>
                                      <class name="boxed-list"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Empty State -->
                            <child>
                              <object class="AdwStatusPage" id="status_empty">
                                <property name="visible">false</property>
                                <property name="icon-name">emblem-documents-symbolic</property>
                                <property name="title" translatable="yes">No Active Delegations</property>
                                <property name="description" translatable="yes">Create a delegation to allow another key to sign events on your behalf.</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <!-- Create Page: Create new delegation -->
            <child>
              <object class="GtkStackPage">
                <property name="name">create</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vscrollbar-policy">automatic</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum-size">480</property>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">18</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">18</property>
                            <property name="margin-bottom">18</property>
                            <!-- Info Banner -->
                            <child>
                              <object class="AdwBanner" id="banner_info">
                                <property name="title" translatable="yes">Delegations grant signing authority. Only delegate to keys you trust.</property>
                                <property name="revealed">true</property>
                                <style>
                                  <class name="warning"/>
                                </style>
                              </object>
                            </child>
                            <!-- Delegatee Pubkey -->
                            <child>
                              <object class="AdwPreferencesGroup">
                                <property name="title" translatable="yes">Delegatee</property>
                                <property name="description" translatable="yes">The public key that will receive signing authority</property>
                                <child>
                                  <object class="AdwEntryRow" id="entry_delegatee">
                                    <property name="title" translatable="yes">Public Key (hex or npub)</property>
                                    <accessibility>
                                      <property name="description">Enter the delegatee's public key in hex format (64 characters) or npub format</property>
                                    </accessibility>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwEntryRow" id="entry_label">
                                    <property name="title" translatable="yes">Label (optional)</property>
                                    <accessibility>
                                      <property name="description">A friendly name to identify this delegation</property>
                                    </accessibility>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Event Kinds -->
                            <child>
                              <object class="AdwPreferencesGroup">
                                <property name="title" translatable="yes">Allowed Event Kinds</property>
                                <property name="description" translatable="yes">Select which event types this delegation can sign</property>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">All Event Kinds</property>
                                    <property name="subtitle" translatable="yes">No restrictions on event types</property>
                                    <child type="prefix">
                                      <object class="GtkCheckButton" id="chk_all_kinds">
                                        <property name="valign">center</property>
                                        <property name="active">true</property>
                                        <accessibility>
                                          <property name="label">Allow all event kinds</property>
                                        </accessibility>
                                      </object>
                                    </child>
                                    <property name="activatable-widget">chk_all_kinds</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwExpanderRow" id="expander_kinds">
                                    <property name="title" translatable="yes">Specific Kinds Only</property>
                                    <property name="subtitle" translatable="yes">Restrict to selected event types</property>
                                    <property name="show-enable-switch">true</property>
                                    <property name="enable-expansion">false</property>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="title">Kind 1: Short Text Note</property>
                                        <child type="suffix">
                                          <object class="GtkCheckButton" id="chk_kind_1">
                                            <property name="valign">center</property>
                                          </object>
                                        </child>
                                        <property name="activatable-widget">chk_kind_1</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="title">Kind 6: Repost</property>
                                        <child type="suffix">
                                          <object class="GtkCheckButton" id="chk_kind_6">
                                            <property name="valign">center</property>
                                          </object>
                                        </child>
                                        <property name="activatable-widget">chk_kind_6</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="title">Kind 7: Reaction</property>
                                        <child type="suffix">
                                          <object class="GtkCheckButton" id="chk_kind_7">
                                            <property name="valign">center</property>
                                          </object>
                                        </child>
                                        <property name="activatable-widget">chk_kind_7</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="title">Kind 4: Encrypted DM</property>
                                        <child type="suffix">
                                          <object class="GtkCheckButton" id="chk_kind_4">
                                            <property name="valign">center</property>
                                          </object>
                                        </child>
                                        <property name="activatable-widget">chk_kind_4</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="title">Kind 0: Profile Metadata</property>
                                        <child type="suffix">
                                          <object class="GtkCheckButton" id="chk_kind_0">
                                            <property name="valign">center</property>
                                          </object>
                                        </child>
                                        <property name="activatable-widget">chk_kind_0</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="title">Kind 3: Follow List</property>
                                        <child type="suffix">
                                          <object class="GtkCheckButton" id="chk_kind_3">
                                            <property name="valign">center</property>
                                          </object>
                                        </child>
                                        <property name="activatable-widget">chk_kind_3</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwEntryRow" id="entry_custom_kind">
                                        <property name="title" translatable="yes">Custom Kind Number</property>
                                        <property name="input-purpose">number</property>
                                        <accessibility>
                                          <property name="description">Enter a custom event kind number</property>
                                        </accessibility>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Time Constraints -->
                            <child>
                              <object class="AdwPreferencesGroup">
                                <property name="title" translatable="yes">Time Constraints</property>
                                <property name="description" translatable="yes">Optionally limit when this delegation is valid</property>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">No Time Limit</property>
                                    <property name="subtitle" translatable="yes">Delegation valid indefinitely (until revoked)</property>
                                    <child type="prefix">
                                      <object class="GtkCheckButton" id="chk_no_time_limit">
                                        <property name="valign">center</property>
                                        <property name="active">true</property>
                                        <accessibility>
                                          <property name="label">No time limit on delegation</property>
                                        </accessibility>
                                      </object>
                                    </child>
                                    <property name="activatable-widget">chk_no_time_limit</property>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwExpanderRow" id="expander_time">
                                    <property name="title" translatable="yes">Set Time Window</property>
                                    <property name="subtitle" translatable="yes">Define when delegation becomes valid and expires</property>
                                    <property name="show-enable-switch">true</property>
                                    <property name="enable-expansion">false</property>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="title" translatable="yes">Valid From</property>
                                        <property name="subtitle" translatable="yes">When delegation becomes active</property>
                                        <child type="suffix">
                                          <object class="GtkBox">
                                            <property name="spacing">6</property>
                                            <child>
                                              <object class="GtkDropDown" id="dropdown_from_preset">
                                                <property name="valign">center</property>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="AdwActionRow">
                                        <property name="title" translatable="yes">Valid Until</property>
                                        <property name="subtitle" translatable="yes">When delegation expires</property>
                                        <child type="suffix">
                                          <object class="GtkBox">
                                            <property name="spacing">6</property>
                                            <child>
                                              <object class="GtkDropDown" id="dropdown_until_preset">
                                                <property name="valign">center</property>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Create Button -->
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="halign">center</property>
                                <property name="spacing">12</property>
                                <property name="margin-top">12</property>
                                <child>
                                  <object class="GtkButton" id="btn_cancel_create">
                                    <property name="label" translatable="yes">Cancel</property>
                                    <accessibility>
                                      <property name="label">Cancel creating delegation</property>
                                    </accessibility>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkButton" id="btn_create">
                                    <property name="label" translatable="yes">Create Delegation</property>
                                    <property name="sensitive">false</property>
                                    <style>
                                      <class name="suggested-action"/>
                                      <class name="pill"/>
                                    </style>
                                    <accessibility>
                                      <property name="label">Create the delegation token</property>
                                    </accessibility>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <!-- Result Page: Show created delegation -->
            <child>
              <object class="GtkStackPage">
                <property name="name">result</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vscrollbar-policy">automatic</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum-size">480</property>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">18</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">18</property>
                            <property name="margin-bottom">18</property>
                            <!-- Success Status -->
                            <child>
                              <object class="AdwStatusPage" id="status_result">
                                <property name="icon-name">emblem-ok-symbolic</property>
                                <property name="title" translatable="yes">Delegation Created</property>
                                <property name="description" translatable="yes">Share this delegation tag with the delegatee</property>
                              </object>
                            </child>
                            <!-- Delegation Details -->
                            <child>
                              <object class="AdwPreferencesGroup">
                                <property name="title" translatable="yes">Delegation Tag</property>
                                <property name="description" translatable="yes">The delegatee should include this tag in their events</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">12</property>
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-top">6</property>
                                    <property name="margin-bottom">6</property>
                                    <child>
                                      <object class="GtkScrolledWindow">
                                        <property name="height-request">120</property>
                                        <property name="hscrollbar-policy">automatic</property>
                                        <property name="vscrollbar-policy">automatic</property>
                                        <child>
                                          <object class="GtkLabel" id="lbl_delegation_tag">
                                            <property name="wrap">true</property>
                                            <property name="wrap-mode">word-char</property>
                                            <property name="selectable">true</property>
                                            <property name="xalign">0</property>
                                            <property name="yalign">0</property>
                                            <style>
                                              <class name="monospace"/>
                                            </style>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton" id="btn_copy_tag">
                                        <property name="label" translatable="yes">Copy Delegation Tag</property>
                                        <property name="halign">center</property>
                                        <accessibility>
                                          <property name="label">Copy delegation tag to clipboard</property>
                                        </accessibility>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Delegation Summary -->
                            <child>
                              <object class="AdwPreferencesGroup">
                                <property name="title" translatable="yes">Summary</property>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Delegatee</property>
                                    <child type="suffix">
                                      <object class="GtkLabel" id="lbl_result_delegatee">
                                        <property name="selectable">true</property>
                                        <style>
                                          <class name="dim-label"/>
                                          <class name="monospace"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Allowed Kinds</property>
                                    <child type="suffix">
                                      <object class="GtkLabel" id="lbl_result_kinds">
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Validity</property>
                                    <child type="suffix">
                                      <object class="GtkLabel" id="lbl_result_validity">
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Done Button -->
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="halign">center</property>
                                <property name="margin-top">12</property>
                                <child>
                                  <object class="GtkButton" id="btn_done">
                                    <property name="label" translatable="yes">Done</property>
                                    <style>
                                      <class name="suggested-action"/>
                                      <class name="pill"/>
                                    </style>
                                    <accessibility>
                                      <property name="label">Close and return to list</property>
                                    </accessibility>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <!-- Details Page: View/Revoke delegation -->
            <child>
              <object class="GtkStackPage">
                <property name="name">details</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vscrollbar-policy">automatic</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum-size">480</property>
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">18</property>
                            <property name="margin-start">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-top">18</property>
                            <property name="margin-bottom">18</property>
                            <!-- Delegation Info -->
                            <child>
                              <object class="AdwPreferencesGroup">
                                <property name="title" translatable="yes">Delegation Details</property>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Label</property>
                                    <child type="suffix">
                                      <object class="GtkLabel" id="lbl_detail_label">
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Delegatee</property>
                                    <child type="suffix">
                                      <object class="GtkLabel" id="lbl_detail_delegatee">
                                        <property name="selectable">true</property>
                                        <style>
                                          <class name="dim-label"/>
                                          <class name="monospace"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Allowed Kinds</property>
                                    <child type="suffix">
                                      <object class="GtkLabel" id="lbl_detail_kinds">
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Valid From</property>
                                    <child type="suffix">
                                      <object class="GtkLabel" id="lbl_detail_from">
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Valid Until</property>
                                    <child type="suffix">
                                      <object class="GtkLabel" id="lbl_detail_until">
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Created</property>
                                    <child type="suffix">
                                      <object class="GtkLabel" id="lbl_detail_created">
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwActionRow">
                                    <property name="title" translatable="yes">Status</property>
                                    <child type="suffix">
                                      <object class="GtkLabel" id="lbl_detail_status">
                                        <style>
                                          <class name="dim-label"/>
                                        </style>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Delegation Tag -->
                            <child>
                              <object class="AdwPreferencesGroup">
                                <property name="title" translatable="yes">Delegation Tag</property>
                                <child>
                                  <object class="GtkBox">
                                    <property name="orientation">vertical</property>
                                    <property name="spacing">12</property>
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="margin-top">6</property>
                                    <property name="margin-bottom">6</property>
                                    <child>
                                      <object class="GtkScrolledWindow">
                                        <property name="height-request">100</property>
                                        <property name="hscrollbar-policy">automatic</property>
                                        <property name="vscrollbar-policy">automatic</property>
                                        <child>
                                          <object class="GtkLabel" id="lbl_detail_tag">
                                            <property name="wrap">true</property>
                                            <property name="wrap-mode">word-char</property>
                                            <property name="selectable">true</property>
                                            <property name="xalign">0</property>
                                            <property name="yalign">0</property>
                                            <style>
                                              <class name="monospace"/>
                                            </style>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton" id="btn_copy_detail_tag">
                                        <property name="label" translatable="yes">Copy Tag</property>
                                        <property name="halign">center</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <!-- Actions -->
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="halign">center</property>
                                <property name="spacing">12</property>
                                <property name="margin-top">12</property>
                                <child>
                                  <object class="GtkButton" id="btn_back_to_list">
                                    <property name="label" translatable="yes">Back</property>
                                    <accessibility>
                                      <property name="label">Return to delegation list</property>
                                    </accessibility>
                                  </object>
                                </child>
                                <child>
