<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.5"/>
  <template class="SignerWindow" parent="AdwApplicationWindow">
    <property name="default-width">920</property>
    <property name="default-height">640</property>
    <property name="width-request">320</property>
    <property name="height-request">480</property>
    <!-- Enable keyboard navigation for the window -->
    <property name="focus-visible">true</property>
    <accessibility>
      <property name="label">GNostr Signer main window</property>
      <property name="description">Main application window for managing Nostr signing keys and connected applications</property>
    </accessibility>

    <!-- Responsive breakpoints for adaptive layout -->
    <child>
      <object class="AdwBreakpoint" id="breakpoint_mobile">
        <condition>max-width: 500px</condition>
        <!-- On narrow screens: collapse sidebar, show bottom bar, reveal toggle button -->
        <setter object="split_view" property="collapsed">true</setter>
        <setter object="bottom_bar" property="reveal">true</setter>
        <setter object="switcher_title" property="title-visible">true</setter>
        <setter object="sidebar_toggle_btn" property="visible">true</setter>
      </object>
    </child>
    <child>
      <object class="AdwBreakpoint" id="breakpoint_tablet">
        <condition>max-width: 800px</condition>
        <!-- On medium screens: sidebar overlay mode, show toggle button -->
        <setter object="split_view" property="collapsed">true</setter>
        <setter object="bottom_bar" property="reveal">false</setter>
        <setter object="sidebar_toggle_btn" property="visible">true</setter>
      </object>
    </child>

    <child>
      <!-- Main stack to switch between locked and unlocked states -->
      <object class="GtkStack" id="main_stack">
        <property name="transition-type">crossfade</property>
        <property name="transition-duration">200</property>
        <accessibility>
          <property name="label">Application state</property>
          <property name="description">Switches between locked and unlocked application state</property>
        </accessibility>

        <!-- Lock Screen Page -->
        <child>
          <object class="GtkStackPage">
            <property name="name">locked</property>
            <property name="child">
              <object class="GnLockScreen" id="lock_screen"/>
            </property>
          </object>
        </child>

        <!-- Main Content Page -->
        <child>
          <object class="GtkStackPage">
            <property name="name">unlocked</property>
            <property name="child">
              <object class="AdwToolbarView" id="toolbar_view">
                <child type="top">
                  <object class="AdwHeaderBar" id="header_bar">
                    <accessibility>
                      <property name="label">Main header bar</property>
                    </accessibility>
                    <!-- Toggle button to show sidebar on narrow screens -->
                    <child type="start">
                      <object class="GtkToggleButton" id="sidebar_toggle_btn">
                        <property name="icon-name">sidebar-show-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Toggle sidebar</property>
                        <property name="visible">false</property>
                        <accessibility>
                          <property name="label">Toggle sidebar</property>
                          <property name="description">Show or hide the navigation sidebar</property>
                        </accessibility>
                      </object>
                    </child>
                    <property name="title-widget">
                      <object class="AdwViewSwitcherTitle" id="switcher_title">
                        <property name="stack">stack</property>
                        <property name="title">GNostr Signer</property>
                        <accessibility>
                          <property name="label">Page switcher</property>
                          <property name="description">Switch between Permissions, Applications, and Settings pages</property>
                        </accessibility>
                      </object>
                    </property>
                    <child type="end">
                      <object class="GtkMenuButton" id="menu_btn">
                        <property name="icon-name">open-menu-symbolic</property>
                        <property name="valign">center</property>
                        <accessibility>
                          <property name="label">Application menu</property>
                          <property name="description">Open the application menu with additional options</property>
                        </accessibility>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwNavigationSplitView" id="split_view">
                    <property name="min-sidebar-width">220</property>
                    <property name="max-sidebar-width">300</property>
                    <property name="sidebar-width-fraction">0.30</property>
                    <accessibility>
                      <property name="label">Navigation split view</property>
                      <property name="description">Main content area with sidebar navigation</property>
                    </accessibility>
                    <child type="sidebar">
                      <object class="AdwNavigationPage" id="sidebar_page">
                        <property name="title" translatable="yes">Sections</property>
                        <accessibility>
                          <property name="label">Section navigation sidebar</property>
                          <property name="description">Navigate between different sections of the application</property>
                        </accessibility>
                        <property name="child">
                          <object class="GtkScrolledWindow">
                            <property name="hscrollbar-policy">never</property>
                            <property name="vexpand">true</property>
                            <child>
                              <object class="GtkListBox" id="sidebar">
                                <property name="selection-mode">browse</property>
                                <property name="activate-on-single-click">true</property>
                                <!-- Enable keyboard focus for Tab navigation (nostrc-tz8w) -->
                                <property name="focusable">true</property>
                                <property name="focus-on-click">true</property>
                                <style>
                                  <class name="navigation-sidebar"/>
                                </style>
                                <accessibility>
                                  <property name="label">Navigation sections list</property>
                                  <property name="description">List of navigation sections. Use arrow keys to navigate and Enter to select.</property>
                                </accessibility>
                                <child>
                                  <object class="GtkListBoxRow" id="row_permissions">
                                    <accessibility>
                                      <property name="label">Permissions and Connection section</property>
                                      <property name="description">Navigate to permissions and connection settings</property>
                                    </accessibility>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="orientation">horizontal</property>
                                        <property name="spacing">12</property>
                                        <property name="margin-start">12</property>
                                        <property name="margin-end">12</property>
                                        <property name="margin-top">10</property>
                                        <property name="margin-bottom">10</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="icon-name">security-high-symbolic</property>
                                            <style>
                                              <class name="dim-label"/>
                                            </style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="label" translatable="yes">Permissions</property>
                                            <property name="xalign">0</property>
                                            <property name="hexpand">true</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkListBoxRow" id="row_applications">
                                    <accessibility>
                                      <property name="label">Applications section</property>
                                      <property name="description">Navigate to manage connected applications</property>
                                    </accessibility>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="orientation">horizontal</property>
                                        <property name="spacing">12</property>
                                        <property name="margin-start">12</property>
                                        <property name="margin-end">12</property>
                                        <property name="margin-top">10</property>
                                        <property name="margin-bottom">10</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="icon-name">application-x-executable-symbolic</property>
                                            <style>
                                              <class name="dim-label"/>
                                            </style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="label" translatable="yes">Applications</property>
                                            <property name="xalign">0</property>
                                            <property name="hexpand">true</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkListBoxRow" id="row_sessions">
                                    <accessibility>
                                      <property name="label">Active Sessions section</property>
                                      <property name="description">Navigate to manage active client sessions</property>
                                    </accessibility>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="orientation">horizontal</property>
                                        <property name="spacing">12</property>
                                        <property name="margin-start">12</property>
                                        <property name="margin-end">12</property>
                                        <property name="margin-top">10</property>
                                        <property name="margin-bottom">10</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="icon-name">network-wireless-symbolic</property>
                                            <style>
                                              <class name="dim-label"/>
                                            </style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="label" translatable="yes">Sessions</property>
                                            <property name="xalign">0</property>
                                            <property name="hexpand">true</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkListBoxRow" id="row_history">
                                    <accessibility>
                                      <property name="label">Event History section</property>
                                      <property name="description">Navigate to view signing operation history</property>
                                    </accessibility>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="orientation">horizontal</property>
                                        <property name="spacing">12</property>
                                        <property name="margin-start">12</property>
                                        <property name="margin-end">12</property>
                                        <property name="margin-top">10</property>
                                        <property name="margin-bottom">10</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="icon-name">document-open-recent-symbolic</property>
                                            <style>
                                              <class name="dim-label"/>
                                            </style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="label" translatable="yes">History</property>
                                            <property name="xalign">0</property>
                                            <property name="hexpand">true</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="GtkListBoxRow" id="row_settings">
                                    <accessibility>
                                      <property name="label">Settings section</property>
                                      <property name="description">Navigate to application settings</property>
                                    </accessibility>
                                    <child>
                                      <object class="GtkBox">
                                        <property name="orientation">horizontal</property>
                                        <property name="spacing">12</property>
                                        <property name="margin-start">12</property>
                                        <property name="margin-end">12</property>
                                        <property name="margin-top">10</property>
                                        <property name="margin-bottom">10</property>
                                        <child>
                                          <object class="GtkImage">
                                            <property name="icon-name">emblem-system-symbolic</property>
                                            <style>
                                              <class name="dim-label"/>
                                            </style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkLabel">
                                            <property name="label" translatable="yes">Settings</property>
                                            <property name="xalign">0</property>
                                            <property name="hexpand">true</property>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwNavigationPage" id="content_page">
                        <property name="title" translatable="yes">GNostr Signer</property>
                        <accessibility>
                          <property name="label">Main content area</property>
                          <property name="description">Main content for the selected section</property>
                        </accessibility>
                        <property name="child">
                          <object class="AdwViewStack" id="stack">
                            <accessibility>
                              <property name="label">Content stack</property>
                              <property name="description">Container for different page views</property>
                            </accessibility>
                            <child>
                              <object class="AdwViewStackPage">
                                <property name="name">permissions</property>
                                <property name="title" translatable="yes">Permissions</property>
                                <property name="icon-name">security-high-symbolic</property>
                                <property name="child">
                                  <object class="PagePermissions" id="page_permissions"/>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="AdwViewStackPage">
                                <property name="name">applications</property>
                                <property name="title" translatable="yes">Apps</property>
                                <property name="icon-name">application-x-executable-symbolic</property>
                                <property name="child">
                                  <object class="PageApplications" id="page_applications"/>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="AdwViewStackPage">
                                <property name="name">sessions</property>
                                <property name="title" translatable="yes">Sessions</property>
                                <property name="icon-name">network-wireless-symbolic</property>
                                <property name="child">
                                  <object class="GnPageSessions" id="page_sessions"/>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="AdwViewStackPage">
                                <property name="name">history</property>
                                <property name="title" translatable="yes">History</property>
                                <property name="icon-name">document-open-recent-symbolic</property>
                                <property name="child">
                                  <object class="GnPageHistory" id="page_history"/>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="AdwViewStackPage">
                                <property name="name">settings</property>
                                <property name="title" translatable="yes">Settings</property>
                                <property name="icon-name">emblem-system-symbolic</property>
                                <property name="child">
                                  <object class="PageSettings" id="page_settings"/>
                                </property>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
                <!-- Bottom bar for narrow screens (mobile) -->
                <child type="bottom">
                  <object class="AdwViewSwitcherBar" id="bottom_bar">
                    <property name="stack">stack</property>
                    <property name="reveal">false</property>
                    <accessibility>
                      <property name="label">Bottom navigation bar</property>
                      <property name="description">Navigation bar for narrow screens</property>
                    </accessibility>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
