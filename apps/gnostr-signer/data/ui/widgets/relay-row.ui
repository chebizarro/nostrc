<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.5"/>
  <template class="RelayRow" parent="AdwActionRow">
    <property name="title" translatable="yes">Relay URL</property>
    <property name="subtitle" translatable="yes">Status</property>
    <accessibility>
      <property name="label">Relay connection</property>
      <property name="description">A configured Nostr relay. Use the toggle to enable or disable this relay connection.</property>
    </accessibility>
    <child type="suffix">
      <object class="GtkSwitch" id="switch_enabled">
        <property name="valign">center</property>
        <property name="vexpand">false</property>
        <accessibility>
          <property name="label">Enable relay</property>
          <property name="description">Toggle to enable or disable this relay connection</property>
        </accessibility>
      </object>
    </child>
  </template>
</interface>
