using Gtk 4.0;

template $RelayRow: Box {
  orientation: horizontal;
  spacing: 12;
  margin-top: 8;
  margin-bottom: 8;
  margin-start: 12;
  margin-end: 12;

  accessibility {
    label: "Relay entry";
    description: "A configured Nostr relay with enable checkbox";
  }

  CheckButton chk_enabled {
    valign: center;

    accessibility {
      label: "Enable relay";
      description: "Check to enable this relay connection";
    }
  }

  Label lbl_url {
    label: _("wss://relay.example.com");
    xalign: 0;
    hexpand: true;
    ellipsize: end;

    accessibility {
      description: "The relay WebSocket URL";
    }
  }

  Button btn_remove {
    icon-name: "edit-delete-symbolic";
    valign: center;
    visible: false;

    accessibility {
      label: "Remove relay";
      description: "Remove this relay from the list";
    }

    styles [
      "flat",
      "circular",
    ]
  }
}
