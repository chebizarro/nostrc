<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.4"/>
  <template class="PageSettings" parent="AdwPreferencesPage">
    <accessibility>
      <property name="label">Settings page</property>
      <property name="description">Configure application appearance, security, network, and social settings</property>
    </accessibility>
    <child>
      <object class="AdwPreferencesGroup" id="group_appearance">
        <property name="title" translatable="yes">Appearance</property>
        <accessibility>
          <property name="label">Appearance settings</property>
          <property name="description">Configure visual appearance options</property>
        </accessibility>
        <child>
          <object class="AdwComboRow" id="combo_theme">
            <property name="title" translatable="yes">Theme</property>
            <property name="subtitle" translatable="yes">Choose the app color scheme</property>
            <accessibility>
              <property name="description">Select the application color theme from System, Light, or Dark modes</property>
            </accessibility>
            <property name="model">
              <object class="GtkStringList" id="theme_model">
                <items>
                  <item translatable="yes">System</item>
                  <item translatable="yes">Light</item>
                  <item translatable="yes">Dark</item>
                </items>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="group_session">
        <property name="title" translatable="yes">Session</property>
        <property name="description" translatable="yes">Auto-lock and app session settings</property>
        <accessibility>
          <property name="label">Session settings</property>
          <property name="description">Configure auto-lock timeout and client session behavior</property>
        </accessibility>
        <child>
          <object class="AdwComboRow" id="combo_lock_timeout">
            <property name="title" translatable="yes">Auto-lock timeout</property>
            <property name="subtitle" translatable="yes">Lock session after inactivity</property>
            <accessibility>
              <property name="description">Select how long to wait before automatically locking the session</property>
            </accessibility>
            <property name="model">
              <object class="GtkStringList" id="lock_timeout_model">
                <items>
                  <item translatable="yes">Never</item>
                  <item translatable="yes">1 minute</item>
                  <item translatable="yes">5 minutes</item>
                  <item translatable="yes">15 minutes</item>
                  <item translatable="yes">30 minutes</item>
                  <item translatable="yes">1 hour</item>
                </items>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="AdwSwitchRow" id="switch_lock_on_idle">
            <property name="title" translatable="yes">Lock on system idle</property>
            <property name="subtitle" translatable="yes">Also lock when the screen locks</property>
            <accessibility>
              <property name="description">Enable to automatically lock when the system goes idle or screen locks</property>
            </accessibility>
          </object>
        </child>
        <child>
          <object class="AdwComboRow" id="combo_client_session_timeout">
            <property name="title" translatable="yes">App session timeout</property>
            <property name="subtitle" translatable="yes">How long remembered apps stay approved</property>
            <accessibility>
              <property name="description">Select how long client application approvals remain valid</property>
            </accessibility>
            <property name="model">
              <object class="GtkStringList" id="client_session_timeout_model">
                <items>
                  <item translatable="yes">10 minutes</item>
                  <item translatable="yes">15 minutes</item>
                  <item translatable="yes">30 minutes</item>
                  <item translatable="yes">1 hour</item>
                  <item translatable="yes">4 hours</item>
                  <item translatable="yes">24 hours</item>
                  <item translatable="yes">Forever</item>
                </items>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Manage active sessions</property>
            <property name="subtitle" translatable="yes">View and revoke app approvals</property>
            <accessibility>
              <property name="description">Open the sessions page to view and manage active application sessions</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_manage_sessions">
                <property name="label" translatable="yes">View</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">View active sessions</property>
                  <property name="description">Click to view and manage active app sessions</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="group_security">
        <property name="title" translatable="yes">Security</property>
        <accessibility>
          <property name="label">Security settings</property>
          <property name="description">Manage accounts, keys, and profile settings</property>
        </accessibility>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Add Account</property>
            <accessibility>
              <property name="description">Add a new signing account or import an existing key</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_add_account">
                <property name="label" translatable="yes">Open</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Open add account dialog</property>
                  <property name="description">Click to open the add account dialog</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Select Account</property>
            <accessibility>
              <property name="description">Switch between available signing accounts</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_select_account">
                <property name="label" translatable="yes">Open</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Open account selector</property>
                  <property name="description">Click to open the account selection dialog</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Backup Keys</property>
            <accessibility>
              <property name="description">Export and backup your private keys securely</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_backup_keys">
                <property name="label" translatable="yes">Open</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Open key backup dialog</property>
                  <property name="description">Click to open the key backup and export dialog</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Edit Profile</property>
            <property name="subtitle" translatable="yes">Name, bio, avatar, NIP-05, lightning address</property>
            <accessibility>
              <property name="description">Edit your Nostr profile metadata including display name, bio, and identifiers</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_edit_profile">
                <property name="label" translatable="yes">Open</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Open profile editor</property>
                  <property name="description">Click to open the profile editing dialog</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Key Rotation</property>
            <property name="subtitle" translatable="yes">Migrate to a new keypair (kind 1776)</property>
            <accessibility>
              <property name="description">Rotate your identity to a new keypair while announcing the migration</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_key_rotation">
                <property name="label" translatable="yes">Rotate</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Open key rotation dialog</property>
                  <property name="description">Click to rotate your key to a new keypair</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="group_network">
        <property name="title" translatable="yes">Network</property>
        <accessibility>
          <property name="label">Network settings</property>
          <property name="description">Configure network connections and relay settings</property>
        </accessibility>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Tor/Orbot setup</property>
            <accessibility>
              <property name="description">Configure Tor proxy settings for enhanced privacy</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_orbot_setup">
                <property name="label" translatable="yes">Open</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Open Orbot setup</property>
                  <property name="description">Click to configure Tor and Orbot proxy settings</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Relays</property>
            <accessibility>
              <property name="description">Manage Nostr relay connections for reading and writing events</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_relays">
                <property name="label" translatable="yes">Open</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Open relay configuration</property>
                  <property name="description">Click to manage relay connections</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Listen for new connections</property>
            <accessibility>
              <property name="description">Enable or disable listening for incoming connection requests from applications</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkSwitch" id="switch_listen">
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Listen for connections toggle</property>
                  <property name="description">Toggle to enable or disable listening for new application connections</property>
                </accessibility>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="group_social">
        <property name="title" translatable="yes">Social</property>
        <property name="description" translatable="yes">Manage your follow and mute lists</property>
        <accessibility>
          <property name="label">Social settings</property>
          <property name="description">Manage your social connections including follows and mutes</property>
        </accessibility>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Following</property>
            <property name="subtitle" translatable="yes">Manage accounts you follow (kind:3)</property>
            <accessibility>
              <property name="description">View and edit your list of followed accounts published as kind 3 events</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_follows">
                <property name="label" translatable="yes">Manage</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Manage following list</property>
                  <property name="description">Click to manage your list of followed accounts</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Muted</property>
            <property name="subtitle" translatable="yes">Manage muted accounts (kind:10000)</property>
            <accessibility>
              <property name="description">View and edit your list of muted accounts published as kind 10000 events</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_mutes">
                <property name="label" translatable="yes">Manage</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Manage mute list</property>
                  <property name="description">Click to manage your list of muted accounts</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="group_misc">
        <property name="title" translatable="yes">Other</property>
        <accessibility>
          <property name="label">Other settings</property>
          <property name="description">Additional configuration options</property>
        </accessibility>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Logs</property>
            <accessibility>
              <property name="description">View application logs for debugging and troubleshooting</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_logs">
                <property name="label" translatable="yes">Open</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Open application logs</property>
                  <property name="description">Click to view application logs</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Sign policy</property>
            <accessibility>
              <property name="description">Configure signing policies and approval rules</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_sign_policy">
                <property name="label" translatable="yes">Open</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <accessibility>
                  <property name="label">Open sign policy settings</property>
                  <property name="description">Click to configure signing policies</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title" translatable="yes">Setup Assistant</property>
            <property name="subtitle" translatable="yes">Re-run the introductory setup wizard</property>
            <accessibility>
              <property name="description">Launch the setup assistant to learn about GNostr Signer and configure your account</property>
            </accessibility>
            <child type="suffix">
              <object class="GtkButton" id="btn_setup_assistant">
                <property name="label" translatable="yes">Run</property>
                <property name="valign">center</property>
                <property name="vexpand">false</property>
                <property name="action-name">app.show-onboarding</property>
                <accessibility>
                  <property name="label">Run setup assistant</property>
                  <property name="description">Click to launch the setup wizard</property>
                </accessibility>
                <style><class name="suffix-action"/></style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
