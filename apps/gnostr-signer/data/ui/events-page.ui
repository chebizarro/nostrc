<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.4"/>
  <template class="EventsPage" parent="AdwBin">
    <accessibility>
      <property name="label">Events page</property>
      <property name="description">View recent signed events history</property>
    </accessibility>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <accessibility>
              <property name="label">Events page header</property>
            </accessibility>
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title" translatable="yes">Recent Events</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStack" id="stack">
            <property name="transition-type">crossfade</property>
            <property name="vexpand">true</property>
            <property name="hexpand">true</property>
            <accessibility>
              <property name="label">Events content stack</property>
              <property name="description">Shows either the empty state or the list of events</property>
            </accessibility>
            <child>
              <object class="GtkStackPage">
                <property name="name">empty</property>
                <property name="child">
                  <object class="AdwStatusPage" id="empty_state">
                    <property name="icon-name">document-open-recent-symbolic</property>
                    <property name="title" translatable="yes">No Recent Events</property>
                    <property name="description" translatable="yes">Signed events will appear here when applications request signatures through the signer.</property>
                    <property name="vexpand">true</property>
                    <property name="valign">center</property>
                    <accessibility>
                      <property name="label">No recent events</property>
                      <property name="description">No events have been signed yet. Events will appear here when applications request signatures.</property>
                    </accessibility>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">list</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <property name="hscrollbar-policy">never</property>
                    <property name="vexpand">true</property>
                    <property name="hexpand">true</property>
                    <accessibility>
                      <property name="label">Events list container</property>
                      <property name="description">Scrollable container for the list of signed events</property>
                    </accessibility>
                    <child>
                      <object class="AdwClamp">
                        <property name="maximum-size">600</property>
                        <property name="tightening-threshold">400</property>
                        <child>
                          <object class="GtkListView" id="list_view">
                            <property name="single-click-activate">true</property>
                            <accessibility>
                              <property name="label">Recent events list</property>
                              <property name="description">List of recently signed events. Use arrow keys to navigate, Enter to view details.</property>
                            </accessibility>
                            <style>
                              <class name="navigation-sidebar"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
