<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.5"/>
  <template class="GnostrApprovalDialog" parent="AdwDialog">
    <property name="title" translatable="yes">Approval Required</property>
    <property name="content-width">480</property>
    <property name="content-height">-1</property>
    <!-- Minimum width for narrow screens -->
    <property name="width-request">300</property>
    <!-- Enable close on Escape key (treated as deny) -->
    <property name="can-close">true</property>
    <property name="follows-content-size">true</property>
    <accessibility>
      <property name="label">Signature approval dialog</property>
      <property name="description">An application is requesting permission to sign an event. Review the details and approve or deny.</property>
    </accessibility>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <accessibility>
              <property name="label">Approval dialog header</property>
            </accessibility>
            <property name="title-widget">
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">8</property>
                <property name="halign">center</property>
                <child>
                  <object class="GtkImage" id="header_icon">
                    <property name="icon-name">dialog-question-symbolic</property>
                    <property name="pixel-size">24</property>
                    <accessibility>
                      <property name="label">Question icon</property>
                      <property name="description">Indicates a signature request requiring your decision</property>
                    </accessibility>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="header_title">
                    <property name="label" translatable="yes">Signature Request</property>
                    <attributes>
                      <attribute name="weight" value="bold"/>
                    </attributes>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">never</property>
            <property name="vscrollbar-policy">automatic</property>
            <property name="propagate-natural-height">true</property>
            <property name="max-content-height">500</property>
            <child>
              <object class="AdwClamp">
                <property name="maximum-size">480</property>
                <property name="tightening-threshold">360</property>
                <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">16</property>
            <property name="margin-top">16</property>
            <property name="margin-bottom">16</property>
            <property name="margin-start">16</property>
            <property name="margin-end">16</property>

            <!-- Event Metadata Section -->
            <child>
              <object class="GtkListBox" id="metadata_list">
                <property name="selection-mode">none</property>
                <style>
                  <class name="boxed-list"/>
                </style>
                <accessibility>
                  <property name="label">Request details</property>
                  <property name="description">Information about the signature request including event type, requesting application, identity, and timestamp</property>
                </accessibility>
                <child>
                  <object class="AdwActionRow" id="row_event_type">
                    <property name="title" translatable="yes">Event Type</property>
                    <property name="subtitle" translatable="yes">Unknown</property>
                    <accessibility>
                      <property name="description">The type of Nostr event being signed</property>
                    </accessibility>
                    <child type="prefix">
                      <object class="GtkImage" id="event_type_icon">
                        <property name="icon-name">mail-unread-symbolic</property>
                        <accessibility>
                          <property name="label">Event type icon</property>
                          <property name="description">Decorative icon representing the event type</property>
                        </accessibility>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="row_app">
                    <property name="title" translatable="yes">From App</property>
                    <property name="subtitle" translatable="yes">Unknown Application</property>
                    <accessibility>
                      <property name="description">The application requesting the signature</property>
                    </accessibility>
                    <child type="prefix">
                      <object class="GtkImage">
                        <property name="icon-name">application-x-executable-symbolic</property>
                        <accessibility>
                          <property name="label">Application icon</property>
                          <property name="description">Decorative icon representing the requesting application</property>
                        </accessibility>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="row_identity">
                    <property name="title" translatable="yes">Identity</property>
                    <property name="subtitle" translatable="yes">npub...</property>
                    <accessibility>
                      <property name="description">The Nostr identity that will be used for signing</property>
                    </accessibility>
                    <child type="prefix">
                      <object class="GtkImage">
                        <property name="icon-name">avatar-default-symbolic</property>
                        <accessibility>
                          <property name="label">Identity icon</property>
                          <property name="description">Decorative icon representing user identity</property>
                        </accessibility>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="row_timestamp">
                    <property name="title" translatable="yes">Timestamp</property>
                    <property name="subtitle" translatable="yes">Now</property>
                    <accessibility>
                      <property name="description">When this signature request was received</property>
                    </accessibility>
                    <child type="prefix">
                      <object class="GtkImage">
                        <property name="icon-name">preferences-system-time-symbolic</property>
                        <accessibility>
                          <property name="label">Time icon</property>
                          <property name="description">Decorative icon representing timestamp</property>
                        </accessibility>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Event Content Preview -->
            <child>
              <object class="GtkFrame" id="content_frame">
                <property name="label" translatable="yes">Content Preview</property>
                <accessibility>
                  <property name="label">Event content preview</property>
                  <property name="description">Preview of the event content that will be signed</property>
                </accessibility>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">8</property>
                    <property name="margin-top">8</property>
                    <property name="margin-bottom">8</property>
                    <property name="margin-start">8</property>
                    <property name="margin-end">8</property>
                    <child>
                      <object class="GtkLabel" id="content_preview">
                        <property name="wrap">true</property>
                        <property name="wrap-mode">word-char</property>
                        <property name="xalign">0</property>
                        <property name="max-width-chars">60</property>
                        <property name="ellipsize">end</property>
                        <property name="lines">3</property>
                        <property name="selectable">true</property>
                        <accessibility>
                          <property name="label">Event content</property>
                          <property name="description">The content of the event to be signed</property>
                        </accessibility>
                        <style>
                          <class name="monospace"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="btn_expand">
                        <property name="label" translatable="yes">Show More</property>
                        <property name="halign">start</property>
                        <property name="visible">false</property>
                        <accessibility>
                          <property name="label">Show more content</property>
                          <property name="description">Click to expand and show the full event content</property>
                        </accessibility>
                        <style>
                          <class name="flat"/>
                          <class name="link"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Identity Selector (when multiple accounts available) -->
            <child>
              <object class="GtkBox" id="identity_selector_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <property name="visible">false</property>
                <accessibility>
                  <property name="label">Identity selector</property>
                  <property name="description">Select which identity to use for signing when multiple accounts are available</property>
                </accessibility>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Sign as:</property>
                    <property name="halign">start</property>
                  </object>
                </child>
                <child>
                  <object class="GtkDropDown" id="identity_dropdown">
                    <property name="hexpand">true</property>
                    <accessibility>
                      <property name="label">Select signing identity</property>
                      <property name="description">Choose which account to use for this signature</property>
                    </accessibility>
                  </object>
                </child>
              </object>
            </child>

            <!-- Remember preference row -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <accessibility>
                  <property name="label">Remember preference options</property>
                  <property name="description">Options to remember this decision for future requests</property>
                </accessibility>
                <child>
                  <object class="GtkCheckButton" id="chk_remember">
                    <property name="label" translatable="yes">Remember this decision</property>
                    <accessibility>
                      <property name="label">Remember this decision</property>
                      <property name="description">Check to remember your approval or denial for future similar requests</property>
                    </accessibility>
                  </object>
                </child>
                <child>
                  <object class="GtkDropDown" id="ttl_dropdown">
                    <property name="sensitive">false</property>
                    <property name="halign">end</property>
                    <property name="hexpand">true</property>
                    <accessibility>
                      <property name="label">Duration to remember</property>
                      <property name="description">Select how long to remember this decision</property>
                    </accessibility>
                  </object>
                </child>
              </object>
            </child>

            <!-- Action Buttons -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <property name="homogeneous">true</property>
                <property name="margin-top">8</property>
                <accessibility>
                  <property name="label">Action buttons</property>
                  <property name="description">Approve or deny this signature request</property>
                </accessibility>
                <child>
                  <object class="GtkButton" id="btn_deny">
                    <property name="label" translatable="yes">_Deny</property>
                    <property name="use-underline">true</property>
                    <property name="hexpand">true</property>
                    <property name="focusable">true</property>
                    <property name="tooltip-text" translatable="yes">Deny this request (Ctrl+D, Escape)</property>
                    <accessibility>
                      <property name="label">Deny signature request</property>
                      <property name="description">Click to deny this signing request. The application will not receive a signature. Keyboard shortcut: Ctrl+D or Escape.</property>
                    </accessibility>
                    <style>
                      <class name="destructive-action"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="btn_approve">
                    <property name="label" translatable="yes">_Approve</property>
                    <property name="use-underline">true</property>
                    <property name="hexpand">true</property>
                    <property name="focusable">true</property>
                    <property name="receives-default">true</property>
                    <property name="tooltip-text" translatable="yes">Approve this request (Ctrl+A)</property>
                    <accessibility>
                      <property name="label">Approve signature request</property>
                      <property name="description">Click to approve and sign this event with your private key. Keyboard shortcut: Ctrl+A.</property>
                    </accessibility>
                    <style>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>

          </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
