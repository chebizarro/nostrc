<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.5"/>
  <template class="ProfileDashboard" parent="AdwBin">
    <accessibility>
      <property name="label">Profile dashboard</property>
      <property name="description">Dashboard showing your profile information and quick actions</property>
    </accessibility>
    <child>
      <object class="GtkScrolledWindow">
        <property name="hscrollbar-policy">never</property>
        <property name="vexpand">true</property>
        <child>
          <object class="AdwClamp">
            <property name="maximum-size">600</property>
            <property name="tightening-threshold">400</property>
            <property name="margin-top">16</property>
            <property name="margin-bottom">16</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">20</property>
        <property name="halign">fill</property>
        <property name="valign">start</property>

        <!-- Profile Header Section -->
        <child>
          <object class="GtkBox" id="header_box">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <property name="halign">center</property>
            <style>
              <class name="profile-header"/>
            </style>
            <accessibility>
              <property name="label">Profile header</property>
              <property name="description">Your profile avatar, display name, and public key</property>
            </accessibility>

            <!-- Avatar -->
            <child>
              <object class="AdwAvatar" id="avatar">
                <property name="size">96</property>
                <property name="text">?</property>
                <property name="show-initials">true</property>
                <property name="halign">center</property>
                <accessibility>
                  <property name="label">Profile avatar</property>
                  <property name="description">Your profile picture or initials</property>
                </accessibility>
              </object>
            </child>

            <!-- Display Name -->
            <child>
              <object class="GtkLabel" id="lbl_display_name">
                <property name="label" translatable="yes">Anonymous</property>
                <property name="halign">center</property>
                <property name="selectable">false</property>
                <accessibility>
                  <property name="label">Display name</property>
                  <property name="description">Your profile display name</property>
                </accessibility>
                <attributes>
                  <attribute name="weight" value="bold"/>
                  <attribute name="scale" value="1.4"/>
                </attributes>
              </object>
            </child>

            <!-- Truncated npub -->
            <child>
              <object class="GtkLabel" id="lbl_npub">
                <property name="label">npub1...</property>
                <property name="halign">center</property>
                <property name="selectable">true</property>
                <property name="tooltip-text" translatable="yes">Click to copy full public key</property>
                <accessibility>
                  <property name="label">Public key</property>
                  <property name="description">Your Nostr public key in npub format. Select and copy to share.</property>
                </accessibility>
                <style>
                  <class name="dim-label"/>
                  <class name="monospace"/>
                </style>
              </object>
            </child>
          </object>
        </child>

        <!-- Separator -->
        <child>
          <object class="GtkSeparator">
            <property name="orientation">horizontal</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <accessibility>
              <property name="label">Section separator</property>
              <property name="description">Decorative separator between profile info and actions</property>
            </accessibility>
          </object>
        </child>

        <!-- Action Buttons Grid -->
        <child>
          <object class="GtkFlowBox" id="action_grid">
            <property name="selection-mode">none</property>
            <property name="homogeneous">true</property>
            <property name="min-children-per-line">2</property>
            <property name="max-children-per-line">3</property>
            <property name="row-spacing">12</property>
            <property name="column-spacing">12</property>
            <property name="halign">center</property>
            <property name="valign">start</property>
            <!-- Enable keyboard navigation with arrow keys -->
            <property name="activate-on-single-click">true</property>
            <accessibility>
              <property name="label">Quick actions</property>
              <property name="description">Grid of action buttons for common tasks. Use arrow keys to navigate.</property>
            </accessibility>

            <!-- View Events Button -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">true</property>
                <child>
                  <object class="GtkButton" id="btn_view_events">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">View event signing history</property>
                    <accessibility>
                      <property name="label">View Events</property>
                      <property name="description">View your recent event signing history</property>
                    </accessibility>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">document-open-recent-symbolic</property>
                            <property name="pixel-size">32</property>
                            <accessibility>
                              <property name="label">Events icon</property>
                              <property name="description">Decorative icon for viewing events</property>
                            </accessibility>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">View Events</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Manage Relays Button -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">true</property>
                <child>
                  <object class="GtkButton" id="btn_manage_relays">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">Configure relay connections</property>
                    <accessibility>
                      <property name="label">Manage Relays</property>
                      <property name="description">Configure your Nostr relay connections</property>
                    </accessibility>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">network-server-symbolic</property>
                            <property name="pixel-size">32</property>
                            <accessibility>
                              <property name="label">Relays icon</property>
                              <property name="description">Decorative icon for relay management</property>
                            </accessibility>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Manage Relays</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Backup Keys Button -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">true</property>
                <child>
                  <object class="GtkButton" id="btn_backup_keys">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">Export and backup your keys</property>
                    <accessibility>
                      <property name="label">Backup Keys</property>
                      <property name="description">Export and securely backup your private keys</property>
                    </accessibility>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">document-save-symbolic</property>
                            <property name="pixel-size">32</property>
                            <accessibility>
                              <property name="label">Backup icon</property>
                              <property name="description">Decorative icon for key backup</property>
                            </accessibility>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Backup Keys</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Change Password Button -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">true</property>
                <child>
                  <object class="GtkButton" id="btn_change_password">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">Update your passphrase</property>
                    <accessibility>
                      <property name="label">Change Password</property>
                      <property name="description">Update your encryption passphrase</property>
                    </accessibility>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">dialog-password-symbolic</property>
                            <property name="pixel-size">32</property>
                            <accessibility>
                              <property name="label">Password icon</property>
                              <property name="description">Decorative icon for password change</property>
                            </accessibility>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Change Password</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Sign Message Button -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">true</property>
                <child>
                  <object class="GtkButton" id="btn_sign_message">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">Manually sign a message or event</property>
                    <accessibility>
                      <property name="label">Sign Message</property>
                      <property name="description">Manually sign a message or Nostr event</property>
                    </accessibility>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">edit-symbolic</property>
                            <property name="pixel-size">32</property>
                            <accessibility>
                              <property name="label">Sign icon</property>
                              <property name="description">Decorative icon for message signing</property>
                            </accessibility>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Sign Message</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Delegations Button (NIP-26) -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">true</property>
                <child>
                  <object class="GtkButton" id="btn_delegations">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">Manage signing delegations (NIP-26)</property>
                    <accessibility>
                      <property name="label">Delegations</property>
                      <property name="description">Manage NIP-26 signing delegations allowing other keys to sign on your behalf</property>
                    </accessibility>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">emblem-shared-symbolic</property>
                            <property name="pixel-size">32</property>
                            <accessibility>
                              <property name="label">Delegations icon</property>
                              <property name="description">Decorative icon for delegation management</property>
                            </accessibility>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Delegations</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>

      </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
