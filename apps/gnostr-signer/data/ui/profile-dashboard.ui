<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.12"/>
  <requires lib="adwaita" version="1.4"/>
  <template class="ProfileDashboard" parent="AdwBin">
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">24</property>
        <property name="margin-start">24</property>
        <property name="margin-end">24</property>
        <property name="margin-top">24</property>
        <property name="margin-bottom">24</property>
        <property name="halign">center</property>
        <property name="valign">start</property>

        <!-- Profile Header Section -->
        <child>
          <object class="GtkBox" id="header_box">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <property name="halign">center</property>
            <style>
              <class name="profile-header"/>
            </style>

            <!-- Avatar -->
            <child>
              <object class="AdwAvatar" id="avatar">
                <property name="size">96</property>
                <property name="text">?</property>
                <property name="show-initials">true</property>
                <property name="halign">center</property>
              </object>
            </child>

            <!-- Display Name -->
            <child>
              <object class="GtkLabel" id="lbl_display_name">
                <property name="label" translatable="yes">Anonymous</property>
                <property name="halign">center</property>
                <property name="selectable">false</property>
                <attributes>
                  <attribute name="weight" value="bold"/>
                  <attribute name="scale" value="1.4"/>
                </attributes>
              </object>
            </child>

            <!-- Truncated npub -->
            <child>
              <object class="GtkLabel" id="lbl_npub">
                <property name="label">npub1...</property>
                <property name="halign">center</property>
                <property name="selectable">true</property>
                <property name="tooltip-text" translatable="yes">Click to copy full public key</property>
                <style>
                  <class name="dim-label"/>
                  <class name="monospace"/>
                </style>
              </object>
            </child>
          </object>
        </child>

        <!-- Separator -->
        <child>
          <object class="GtkSeparator">
            <property name="orientation">horizontal</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
          </object>
        </child>

        <!-- Action Buttons Grid -->
        <child>
          <object class="GtkFlowBox" id="action_grid">
            <property name="selection-mode">none</property>
            <property name="homogeneous">true</property>
            <property name="min-children-per-line">2</property>
            <property name="max-children-per-line">3</property>
            <property name="row-spacing">12</property>
            <property name="column-spacing">12</property>
            <property name="halign">center</property>
            <property name="valign">start</property>

            <!-- View Events Button -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">false</property>
                <child>
                  <object class="GtkButton" id="btn_view_events">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">View event signing history</property>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">document-open-recent-symbolic</property>
                            <property name="pixel-size">32</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">View Events</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Manage Relays Button -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">false</property>
                <child>
                  <object class="GtkButton" id="btn_manage_relays">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">Configure relay connections</property>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">network-server-symbolic</property>
                            <property name="pixel-size">32</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Manage Relays</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Backup Keys Button -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">false</property>
                <child>
                  <object class="GtkButton" id="btn_backup_keys">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">Export and backup your keys</property>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">document-save-symbolic</property>
                            <property name="pixel-size">32</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Backup Keys</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Change Password Button -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">false</property>
                <child>
                  <object class="GtkButton" id="btn_change_password">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">Update your passphrase</property>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">dialog-password-symbolic</property>
                            <property name="pixel-size">32</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Change Password</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

            <!-- Sign Message Button -->
            <child>
              <object class="GtkFlowBoxChild">
                <property name="focusable">false</property>
                <child>
                  <object class="GtkButton" id="btn_sign_message">
                    <property name="width-request">140</property>
                    <property name="height-request">100</property>
                    <property name="tooltip-text" translatable="yes">Manually sign a message or event</property>
                    <style>
                      <class name="flat"/>
                      <class name="action-button"/>
                    </style>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">edit-symbolic</property>
                            <property name="pixel-size">32</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Sign Message</property>
                            <property name="wrap">true</property>
                            <property name="max-width-chars">12</property>
                            <property name="justify">center</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>

      </object>
    </child>
  </template>
</interface>
