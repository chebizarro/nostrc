<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="GnostrAddAccountDialog" parent="GtkDialog">
    <property name="modal">true</property>
    <property name="title">Add Gnostr Account</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <child>
          <object class="GtkLabel">
            <property name="label">Choose a key source</property>
            <property name="xalign">0</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkCheckButton" id="rb_existing">
                <property name="label">Use an existing key</property>
                <property name="active">true</property>
              </object>
            </child>
            <child>
              <object class="GtkCheckButton" id="rb_generate">
                <property name="label">Generate new</property>
              </object>
            </child>
            <child>
              <object class="GtkCheckButton" id="rb_import">
                <property name="label">Import or bind hardware</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="btn_ok">
            <property name="label">Continue</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
