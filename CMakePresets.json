{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "libgo-default",
      "displayName": "libgo Default (Debug)",
      "description": "Build libgo Debug with warnings as errors",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/libgo/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GO_WARNINGS_AS_ERRORS": "ON"
      }
    },
    {
      "name": "libgo-asan",
      "displayName": "libgo ASan+UBSan (Debug)",
      "description": "Build libgo with AddressSanitizer and UndefinedBehaviorSanitizer; force asm context on supported platforms",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/libgo/build-asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GO_ENABLE_ASAN": "ON",
        "GO_ENABLE_UBSAN": "ON",
        "GO_WARNINGS_AS_ERRORS": "ON",
        "GOF_PORTABLE_CONTEXT": "OFF"
      }
    },
    {
      "name": "libgo-tsan",
      "displayName": "libgo TSan (Debug)",
      "description": "Build libgo with ThreadSanitizer; force asm context on supported platforms",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/libgo/build-tsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GO_ENABLE_TSAN": "ON",
        "GO_WARNINGS_AS_ERRORS": "ON",
        "GOF_PORTABLE_CONTEXT": "OFF"
      }
    },
    {
      "name": "gnostr-relwithdebinfo-prof",
      "displayName": "GNostr RelWithDebInfo + profiling flags",
      "description": "RelWithDebInfo build with -g and frame pointers for sampling profilers",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/relwithdebinfo-prof",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "GNOSTR_ENABLE_PROFILING_FLAGS": "ON",
        "BUILD_APPS": "ON"
      }
    },
    {
      "name": "gnostr-debug-asan",
      "displayName": "GNostr Debug + ASan/UBSan",
      "description": "Debug build of full workspace with AddressSanitizer and UBSan",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug-asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GNOSTR_ENABLE_ASAN": "ON",
        "GNOSTR_ENABLE_UBSAN": "ON",
        "GNOSTR_ENABLE_PROFILING_FLAGS": "ON",
        "BUILD_APPS": "ON"
      }
    },
    {
      "name": "gnostr-debug-tsan",
      "displayName": "GNostr Debug + TSan",
      "description": "ThreadSanitizer instrumentation for the full workspace",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug-tsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GNOSTR_ENABLE_TSAN": "ON",
        "GNOSTR_ENABLE_PROFILING_FLAGS": "ON",
        "BUILD_APPS": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "libgo-default", "configurePreset": "libgo-default" },
    { "name": "libgo-asan", "configurePreset": "libgo-asan" },
    { "name": "libgo-tsan", "configurePreset": "libgo-tsan" },
    { "name": "gnostr-relwithdebinfo-prof", "configurePreset": "gnostr-relwithdebinfo-prof" },
    { "name": "gnostr-debug-asan", "configurePreset": "gnostr-debug-asan" },
    { "name": "gnostr-debug-tsan", "configurePreset": "gnostr-debug-tsan" }
  ],
  "vendor": {
    "notes": "Use: cmake --preset <name>; cmake --build --preset <name> -j."
  }
}
