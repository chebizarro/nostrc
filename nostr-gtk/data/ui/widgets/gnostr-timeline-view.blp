using Gtk 4.0;

template $NostrGtkTimelineView: Widget {
    hexpand: true;
    vexpand: true;

    Box root_box {
        orientation: vertical;
        hexpand: true;
        vexpand: true;

        $NostrGtkTimelineTabs tabs {
            visible: false;
        }

        ScrolledWindow root_scroller {
            vexpand: true;
            hscrollbar-policy: never;
            vscrollbar-policy: automatic;

            ListView list_view {
                vexpand: true;
            }
        }
    }
}
