using Gtk 4.0;

template $NostrGtkTimelineView: Widget {
    hexpand: true;
    vexpand: true;

    accessibility {
        label: _("Timeline");
    }

    Box root_box {
        orientation: vertical;
        hexpand: true;
        vexpand: true;

        $NostrGtkTimelineTabs tabs {
            visible: false;
        }

        ScrolledWindow root_scroller {
            hexpand: true;
            vexpand: true;
            halign: fill;
            hscrollbar-policy: never;
            vscrollbar-policy: automatic;
            propagate-natural-width: false;

            ListView list_view {
                vexpand: true;
                hexpand: true;
                halign: fill;
            }
        }
    }
}
